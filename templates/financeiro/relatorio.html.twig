{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<style>
    .table-custom {
        background-color: #343a40; /* Mantém a consistência com o tema escuro da navbar */
        color: #ffffff;
    }
    .table-custom th,
    .table-custom td {
        border-color: #495057; /* Cor dos bordos mais suave para melhorar a visibilidade */
    }
    .table-custom thead th {
        background-color: #495057; /* Cabeçalho com um tom mais escuro para destaque */
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Relatório Financeiro</h1>
    <table class="table table-custom table-striped mt-3">
        <thead>
            <tr>
                <th>Data</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {% for item in relatorio %}
                <tr>
                    <td>{{ item.data|date('d/m/Y') }}</td>
                    <td>R$ {{ item.total|number_format(2, ',', '.') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
