{% extends 'list/_list_base.html.twig' %}

{% block list_title %}Gest칚o Financeira{% endblock %}

{% block list_actions %}
    <a href="{{ path('financeiro_novo') }}" class="btn btn-primary">
        <span class="icon-base bx bx-plus icon-sm me-2"></span> Novo Lan칞amento
    </a>
{% endblock %}

{% block list_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
    <style>
        .nav-tabs .nav-link {
            font-weight: 600;
        }
        .nav-tabs .nav-link.active {
            border-bottom: 3px solid #007bff;
        }
        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 6px 12px;
            margin: 2px;
            border-radius: 8px;
            border: 1px solid #dee2e6;
            background-color: #f8f9fa;
            color: #007bff !important;
        }
        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background-color: #007bff !important;
            color: #fff !important;
        }
    </style>
{% endblock %}

{% block list_content %}
    <ul class="nav nav-tabs mb-4" id="financeiroTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link {% if not app.request.query.get('aba') or app.request.query.get('aba') == 'diario' %}active{% endif %}" id="diario-tab" data-bs-toggle="tab" data-bs-target="#diario" type="button" role="tab" aria-controls="diario" aria-selected="true">
                Di치rio
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link {% if app.request.query.get('aba') == 'pendente' %}active{% endif %}" id="pendente-tab" data-bs-toggle="tab" data-bs-target="#pendente" type="button" role="tab" aria-controls="pendente" aria-selected="false">
                Pendente
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link {% if app.request.query.get('aba') == 'relatorio' %}active{% endif %}" id="relatorio-tab" data-bs-toggle="tab" data-bs-target="#relatorio" type="button" role="tab" aria-controls="relatorio" aria-selected="false">
                Relat칩rio
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link {% if app.request.query.get('aba') == 'inativos' %}active{% endif %}" id="inativos-tab" data-bs-toggle="tab" data-bs-target="#inativos" type="button" role="tab" aria-controls="inativos" aria-selected="false">
                Inativos
            </button>
        </li>
    </ul>

 <div class="tab-content border border-top-0 p-3">

        {# === ABA DI츼RIO === #}
        <div class="tab-pane fade {% if not app.request.query.get('aba') or app.request.query.get('aba') == 'diario' %}show active{% endif %}" id="diario" role="tabpanel">
            <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
                <div class="me-3">
                    <label for="data_filtro" class="form-label fw-bold">Filtrar por Data</label>
                    <input type="date" id="data_filtro" class="form-control" value="{{ data|date('Y-m-d') }}">
                </div>
                <div class="card shadow-sm border-primary">
                    <div class="card-body p-3">
                        {% set total_diario = 0 %}
                        {% for item in financeiros %}{% set total_diario = total_diario + item.total_valor %}{% endfor %}
                        <h5 class="mb-0 text-primary">Total do Dia:</h5>
                        <h4 class="mb-0 fw-bold">R$ {{ total_diario|number_format(2, ',', '.') }}</h4>
                    </div>
                </div>
            </div>

            <input type="text" id="searchInputDiario" class="form-control mb-3" placeholder="游댌 Buscar no di치rio...">

            <div id="cardContainerDiario" class="row gy-3">
                {% for item in financeiros %}
                    <div class="col-12 card-item" data-search="{{ item.dono_nome }} {{ item.pets|join(' ') }} {{ item.total_valor }}">
                        <div class="card shadow-lg border-0 rounded-3">
                            <div class="card-body p-3">
                                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                                    <div class="flex-grow-1">
                                        <h5 class="card-title mb-1">{{ item.dono_nome }}</h5>
                                        <p class="card-text text-muted mb-1"><i class="fas fa-paw"></i> Pets: {{ item.pets|join(', ') }}</p>
                                        <p class="card-text text-muted"><i class="fas fa-calendar-alt"></i> Data: {{ item.data|date('d/m/Y') }}</p>
                                    </div>
                                    <h4 class="mb-0 fw-bold">R$ {{ item.total_valor|number_format(2, ',', '.') }}</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12"><div class="alert alert-info text-center">Nenhum lan칞amento encontrado.</div></div>
                {% endfor %}
            </div>
            <ul id="paginationDiario" class="pagination justify-content-center mt-3"></ul>
        </div>

        {# === ABA PENDENTE === #}
        <div class="tab-pane fade {% if app.request.query.get('aba') == 'pendente' %}show active{% endif %}" id="pendente" role="tabpanel">
            <input type="text" id="searchInputPendente" class="form-control mb-3" placeholder="游댌 Buscar nos pendentes...">
            <div id="cardContainerPendente" class="row gy-3">
                {% for item in pendentes %}
                    <div class="col-12 card-item" data-search="{{ item.dono_nome }} {{ item.pet_nome }} {{ item.valor }}">
                        <div class="card shadow-lg border-0 rounded-3">
                            <div class="card-body">
                                <h5 class="text-danger">Pagamento Pendente</h5>
                                <p class="mb-1">Tutor: {{ item.dono_nome }}</p>
                                <p class="mb-1">Pet: {{ item.pet_nome }}</p>
                                <p>Data: {{ item.data|date('d/m/Y') }}</p>
                                <h4>R$ {{ item.valor|number_format(2, ',', '.') }}</h4>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12"><div class="alert alert-info text-center">Nenhum pagamento pendente.</div></div>
                {% endfor %}
            </div>
            <ul id="paginationPendente" class="pagination justify-content-center mt-3"></ul>
        </div>

        {# === ABA RELAT칍RIO === #}
        <div class="tab-pane fade {% if app.request.query.get('aba') == 'relatorio' %}show active{% endif %}" id="relatorio" role="tabpanel">
            <form method="GET" action="{{ path('financeiro_index') }}" class="mb-4">
                <div class="row">
                    <div class="col-md-4"><input type="month" id="mes_inicio" name="mes_inicio" class="form-control" value="{{ mes_inicio }}"></div>
                    <div class="col-md-4"><input type="month" id="mes_fim" name="mes_fim" class="form-control" value="{{ mes_fim }}"></div>
                    <div class="col-md-4 d-flex align-items-end"><input type="hidden" name="aba" value="relatorio"><button type="submit" class="btn btn-primary w-100">Filtrar</button></div>
                </div>
            </form>

            <input type="text" id="searchInputRelatorio" class="form-control mb-3" placeholder="游댌 Buscar no relat칩rio...">

            <div id="cardContainerRelatorio" class="row gy-3">
                {% for item in relatorio %}
                    <div class="col-md-4 col-12 card-item" data-search="{{ item.data|date('d/m/Y') }} {{ item.total }}">
                        <div class="card shadow-sm border-0 rounded-3">
                            <div class="card-body">
                                <h5>{{ item.data|date('d/m/Y') }}</h5>
                                <h4 class="text-primary">R$ {{ item.total|number_format(2, ',', '.') }}</h4>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12"><div class="alert alert-info text-center">Nenhum registro encontrado.</div></div>
                {% endfor %}
            </div>
            <ul id="paginationRelatorio" class="pagination justify-content-center mt-3"></ul>
        </div>

        {# === ABA INATIVOS === #}
        <div class="tab-pane fade {% if app.request.query.get('aba') == 'inativos' %}show active{% endif %}" id="inativos" role="tabpanel">
            <input type="text" id="searchInputInativos" class="form-control mb-3" placeholder="游댌 Buscar nos inativos...">
            <div id="cardContainerInativos" class="row gy-3">
                {% for item in inativos %}
                    <div class="col-12 card-item" data-search="{{ item.dono_nome }} {{ item.pet_nome }} {{ item.valor }}">
                        <div class="card shadow-lg border-0 rounded-3 border-danger">
                            <div class="card-body">
                                <h5 class="text-danger">Lan칞amento Inativo</h5>
                                <p>Tutor: {{ item.dono_nome }}</p>
                                <p>Pet: {{ item.pet_nome }}</p>
                                <p>Data: {{ item.data|date('d/m/Y') }}</p>
                                <h4 class="text-danger">R$ {{ item.valor|number_format(2, ',', '.') }}</h4>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12"><div class="alert alert-warning text-center">Nenhum lan칞amento inativo.</div></div>
                {% endfor %}
            </div>
            <ul id="paginationInativos" class="pagination justify-content-center mt-3"></ul>
        </div>
    </div>
{% endblock %}

{% block list_javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/TabelaDefault.js') }}"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function () {
        new TabelaDefault({
            cardContainerId: 'cardContainerDiario',
            paginationId: 'pagination',
            searchInputId: 'searchInput',
            itemsPerPage: 5
        });

        const dataFiltroInput = document.getElementById('data_filtro');
        if (dataFiltroInput) {
            dataFiltroInput.addEventListener('change', function() {
                const dataSelecionada = this.value;
                if (dataSelecionada) {
                    window.location.href = '{{ path('financeiro_index', {'data': 'DATA_PLACEHOLDER'}) }}'.replace('DATA_PLACEHOLDER', dataSelecionada);
                }
            });
        }

        const pendenteTabEl = document.getElementById('pendente-tab');
        if (pendenteTabEl) {
            pendenteTabEl.addEventListener('shown.bs.tab', event => {
                new TabelaDefault({
                    cardContainerId: 'cardContainerPendente',
                    paginationId: 'paginationPendente',
                    searchInputId: 'searchInputPendente',
                    itemsPerPage: 10
                });
            });
        }

        const relatorioTabEl = document.getElementById('relatorio-tab');
        if (relatorioTabEl) {
            relatorioTabEl.addEventListener('shown.bs.tab', event => {
                new TabelaDefault({
                    cardContainerId: 'cardContainerRelatorio',
                    paginationId: 'paginationRelatorio',
                    searchInputId: 'searchInputRelatorio',
                    itemsPerPage: 10
                });
            });
        }

        const inativosTabEl = document.getElementById('inativos-tab');
        if (inativosTabEl) {
            inativosTabEl.addEventListener('shown.bs.tab', event => {
                new TabelaDefault({
                    cardContainerId: 'cardContainerInativos',
                    paginationId: 'paginationInativos',
                    searchInputId: 'searchInputInativos',
                    itemsPerPage: 10
                });
            });
        }

        const urlParams = new URLSearchParams(window.location.search);
        const abaAtiva = urlParams.get('aba');
        if (abaAtiva) {
            const tabElement = document.getElementById(abaAtiva + '-tab');
            if (tabElement) {
                const tab = new bootstrap.Tab(tabElement);
                tab.show();
            }
        } else {
            const primeiraAba = document.getElementById('diario-tab');
            if(primeiraAba) {
                const tab = new bootstrap.Tab(primeiraAba);
                tab.show();
            }
        }
    });
    </script>
{% endblock %}
