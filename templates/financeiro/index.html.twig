{% block list_content %}
<!-- LAYOUT MODERNIZADO - Sistema Financeiro -->
<div class="container-fluid p-0">
    
    <!-- Header com Resumo Compacto -->
    <div class="bg-dark p-4 mb-4 shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3 text-white">
            <div>
                <h4 class="mb-1 fw-bold"><i class="bi bi-cash-stack me-2"></i>Dashboard Financeiro</h4>
                <small class="opacity-75">Acompanhe entradas, saídas e fluxo de caixa em tempo real</small>
            </div>
            <div class="d-flex gap-2">
                <a href="{{ path('clinica_pdv_index') }}" class="btn btn-light btn-sm">
                    <i class="bi bi-cash-coin me-1"></i>PDV
                </a>
            </div>
        </div>
    </div>

    <!-- Layout Principal: Sidebar + Conteúdo -->
    <div class="row g-0">
        
        <!-- SIDEBAR ESQUERDA - Cards de Resumo e Navegação -->
        <div class="col-lg-3 col-md-4 pe-md-3 mb-4 mb-md-0">
            
            <!-- Cards de Métricas Principais -->
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body p-3">
                    <h6 class="text-muted text-uppercase small fw-bold mb-3">
                        <i class="bi bi-speedometer2 me-1"></i>Resumo Rápido
                    </h6>
                    
                    <!-- Hoje -->
                    <div class="d-flex align-items-center justify-content-between p-3 mb-2 rounded" style="background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);">
                        <div>
                            <small class="text-muted d-block mb-1">Hoje</small>
                            {% set total_diario = 0 %}
                            {% for item in financeiros %}{% set total_diario = total_diario + item.total_valor %}{% endfor %}
                            <h5 class="mb-0 fw-bold text-primary">R$ {{ total_diario|number_format(2, ',', '.') }}</h5>
                        </div>
                        <div class="text-primary">
                            <i class="bi bi-calendar-event fs-3"></i>
                        </div>
                    </div>
                    
                    <!-- Pendentes -->
                    <div class="d-flex align-items-center justify-content-between p-3 mb-2 bg-warning bg-opacity-10 rounded">
                        <div>
                            <small class="text-muted d-block mb-1">Pendentes</small>
                            {% set total_pendente = 0 %}
                            {% for item in pendentes %}{% set total_pendente = total_pendente + item.total %}{% endfor %}
                            <h5 class="mb-0 fw-bold text-warning">R$ {{ total_pendente|number_format(2, ',', '.') }}</h5>
                        </div>
                        <div class="text-warning">
                            <i class="bi bi-clock fs-3"></i>
                        </div>
                    </div>
                    
                    <!-- Mês Atual -->
                    <div class="d-flex align-items-center justify-content-between p-3 mb-2 bg-success bg-opacity-10 rounded">
                        <div>
                            <small class="text-muted d-block mb-1">Mês Atual</small>
                            {% set somaTotal = 0 %}
                            {% for item in relatorio %}{% set somaTotal = somaTotal + item.total %}{% endfor %}
                            <h5 class="mb-0 fw-bold text-success">R$ {{ somaTotal|number_format(2, ',', '.') }}</h5>
                        </div>
                        <div class="text-success">
                            <i class="bi bi-graph-up fs-3"></i>
                        </div>
                    </div>
                    
                    <!-- Fluxo Hoje -->
                    <div class="d-flex align-items-center justify-content-between p-3 bg-info bg-opacity-10 rounded">
                        <div>
                            <small class="text-muted d-block mb-1">Fluxo Hoje</small>
                            <h5 class="mb-0 fw-bold text-info">R$ {{ fluxo_caixa.saldo|number_format(2, ',', '.') }}</h5>
                        </div>
                        <div class="text-info">
                            <i class="bi bi-arrow-left-right fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Menu de Navegação Vertical -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-2">
                    <h6 class="text-muted text-uppercase small fw-bold mb-2 px-2">
                        <i class="bi bi-list-ul me-1"></i>Navegação
                    </h6>
                    <div class="nav flex-column nav-pills" id="financeiroTabs" role="tablist">
                        <button class="nav-link {% if not app.request.query.get('aba') or app.request.query.get('aba') == 'diario' %}active{% endif %} text-start mb-1"
                                id="diario-tab" data-bs-toggle="tab" data-bs-target="#diario" type="button" role="tab"
                                aria-controls="diario" aria-selected="true">
                            <i class="bi bi-calendar-event me-2"></i>Caixa Diário
                        </button>
                        <button class="nav-link {% if app.request.query.get('aba') == 'clinica' %}active{% endif %} text-start mb-1"
                                id="clinica-tab" data-bs-toggle="tab" data-bs-target="#clinica" type="button" role="tab"
                                aria-controls="clinica" aria-selected="false">
                            <i class="bi bi-bandaid me-2"></i>Caixa da Clínica
                        </button>
                        <button class="nav-link {% if app.request.query.get('aba') == 'banho_tosa' %}active{% endif %} text-start mb-1"
                                id="banho_tosa-tab" data-bs-toggle="tab" data-bs-target="#banho_tosa" type="button" role="tab"
                                aria-controls="banho_tosa" aria-selected="false">
                            <i class="bi bi-droplet me-2"></i>Caixa do Banho e Tosa
                        </button>
                        <button class="nav-link {% if app.request.query.get('aba') == 'hospedagem' %}active{% endif %} text-start mb-1"
                                id="hospedagem-tab" data-bs-toggle="tab" data-bs-target="#hospedagem" type="button" role="tab"
                                aria-controls="hospedagem" aria-selected="false">
                            <i class="bi bi-house-heart me-2"></i>Caixa da Hospedagem
                        </button>
                        <button class="nav-link {% if app.request.query.get('aba') == 'fiado' %}active{% endif %} text-start mb-1"
                                id="fiado-tab" data-bs-toggle="tab" data-bs-target="#fiado" type="button" role="tab"
                                aria-controls="fiado" aria-selected="false">
                            <i class="bi bi-clock-history me-2"></i>Caixa Fiado
                        </button>
                        <button class="nav-link {% if app.request.query.get('aba') == 'inativos' %}active{% endif %} text-start mb-1"
                                id="inativos-tab" data-bs-toggle="tab" data-bs-target="#inativos" type="button" role="tab"
                                aria-controls="inativos" aria-selected="false">
                            <i class="bi bi-ban me-2"></i>Inativos
                        </button>
                        <button class="nav-link {% if app.request.query.get('aba') == 'fluxo' %}active{% endif %} text-start"
                                id="fluxo-tab" data-bs-toggle="tab" data-bs-target="#fluxo" type="button" role="tab"
                                aria-controls="fluxo" aria-selected="false">
                            <i class="bi bi-arrow-left-right me-2"></i>Fluxo de Caixa
                        </button>
                    </div>
                </div>
            </div>

        </div>

        <!-- ÁREA PRINCIPAL DE CONTEÚDO -->
        <div class="col-lg-9 col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    
                    <div class="tab-content">

                        {# === ABA DIÁRIO === #}
                        <div class="tab-pane fade {% if not app.request.query.get('aba') or app.request.query.get('aba') == 'diario' %}show active{% endif %}"
                             id="diario" role="tabpanel">
                            
                            <!-- Header da Aba -->
                            <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
                                <div>
                                    <h5 class="mb-1 fw-bold"><i class="bi bi-calendar-event text-primary me-2"></i>Caixa Diário</h5>
                                    <small class="text-muted">Movimentações do dia selecionado</small>
                                </div>
                                <div class="text-end">
                                    {% set total_diario = 0 %}
                                    {% for item in financeiros %}{% set total_diario = total_diario + item.total_valor %}{% endfor %}
                                    <small class="text-muted d-block">Total</small>
                                    <h4 class="mb-0 text-primary fw-bold">R$ {{ total_diario|number_format(2, ',', '.') }}</h4>
                                </div>
                            </div>

                            <!-- Filtro -->
                            <div class="row mb-4">
                                <div class="col-md-4">
                                    <label for="data_filtro" class="form-label fw-semibold small">
                                        <i class="bi bi-funnel me-1"></i>Filtrar por Data
                                    </label>
                                    <input type="date" id="data_filtro" class="form-control" value="{{ data|date('Y-m-d') }}">
                                </div>
                            </div>

                            <!-- Lista de Movimentações -->
                            <div id="cardContainerDiario" class="row g-3">
                                {% for item in financeiros %}
