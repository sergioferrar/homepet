                                                            <i class="bi bi-heart-fill text-danger me-1"></i>{{ item.pets|join(', ') }}
                                                            <span class="mx-2">•</span>
                                                            <i class="bi bi-calendar3 me-1"></i>{{ item.data|date('d/m/Y') }}
                                                        </small>
                                                    </div>
                                                </div>
                                                <div class="text-end ms-3">
                                                    <span class="badge bg-info bg-opacity-10 text-info px-3 py-2 fs-6 fw-semibold">
                                                        R$ {{ item.total_valor|number_format(2, ',', '.') }}
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% else %}
