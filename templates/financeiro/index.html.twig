                                         data-search="{{ item.dono_nome }} {{ item.pets|join(' ') }} {{ item.total_valor }}">
                                        <div class="card border-0 shadow-sm hover-shadow transition-all">
                                            <div class="card-body p-3 d-flex justify-content-between align-items-center">
                                                <div class="d-flex align-items-center flex-grow-1">
                                                    <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                                                        <i class="bi bi-person-check text-primary fs-5"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-1 fw-semibold">{{ item.dono_nome }}</h6>
