{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1>Editar Registro Financeiro</h1>
    <form method="post" action="{{ path('financeiro_editar', {'id': financeiro.id}) }}">
        <div class="form-group">
            <label for="descricao">Descrição</label>
            <input type="text" class="form-control" id="descricao" name="descricao" value="{{ financeiro.descricao }}" required>
        </div>
        <div class="form-group">
            <label for="valor">Valor</label>
            <input type="number" step="0.01" class="form-control" id="valor" name="valor" value="{{ financeiro.valor }}" required>
        </div>
        <div class="form-group">
            <label for="data">Data</label>
            <input type="date" class="form-control" id="data" name="data" value="{{ financeiro.data|date('Y-m-d') }}" required>
        </div>
        <div class="form-group">
            <label for="pet_id">Pet</label>
            <select class="form-control" id="pet_id" name="pet_id">
                <option value="">Selecione um pet</option>
                {% for pet in pets %}
                    <option value="{{ pet.id }}" {% if pet.id == financeiro.pet_id %}selected{% endif %}>{{ pet.nome }}</option>
                {% endfor %}
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
</div>
{% endblock %}
