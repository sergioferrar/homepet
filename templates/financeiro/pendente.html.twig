{% extends 'list/_list_base.html.twig' %}

{% block list_title %}Financeiro Pendente{% endblock %}

{% block list_actions %}
    {# O botão de "Novo Lançamento" não é necessário aqui, pois a funcionalidade se encontra no painel principal #}
{% endblock %}

{% block list_content %}
    <div id="cardContainer" class="row gy-3">
        {% for item in financeiros %}
            <div class="col-12 card-item" data-search="{{ item.dono_nome }} {{ item.pet_nome }} {{ item.valor }}">
                <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-body p-3">
                        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-1">
                                    <span class="text-danger">Pagamento Pendente</span>
                                </h5>
                                <p class="card-text text-muted mb-1 d-flex align-items-center gap-1">
                                    <i class="fas fa-user"></i> Tutor: {{ item.dono_nome }}
                                </p>
                                <p class="card-text text-muted mb-1 d-flex align-items-center gap-1">
                                    <i class="fas fa-paw"></i> Pet: {{ item.pet_nome }}
                                </p>
                                <p class="card-text text-muted d-flex align-items-center gap-1">
                                    <i class="fas fa-calendar-alt"></i> Data: {{ item.data|date('d/m/Y') }}
                                </p>
                            </div>
                            <div class="d-flex align-items-center gap-1">
                                <h4 class="mb-0 me-3 fw-bold">R$ {{ item.valor|number_format(2, ',', '.') }}</h4>
                                <form method="post" action="{{ path('financeiro_confirmar_pagamento', {'id': item.id}) }}">
                                    <button type="submit" class="btn btn-success btn-sm">Confirmar Pagamento</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center mb-0">Nenhum pagamento pendente.</div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block list_javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/TabelaDefault.js') }}"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Inicializa o TabelaDefault para o modo card
            new TabelaDefault({
                cardContainerId: 'cardContainer',
                paginationId: 'pagination',
                searchInputId: 'searchInput',
                itemsPerPage: 10
            });
        });
    </script>
{% endblock %}