{% extends 'base.html.twig' %}

{% block title %}Modelos de Documentos{% endblock %}

{% block stylesheets %}
<link href="{{ asset('assets/vendors/quill/quill.snow.css') }}" rel="stylesheet">
{{ parent() }}
<style>
    .documento-container {
        max-width: 1000px;
        margin: 20px auto;
        padding: 2rem;
        background-color: white;
        border: 1px solid #ccc;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
    .quill-editor {
        min-height: 100px;
        margin-bottom: 30px;
    }
    @media print {
        body * { visibility: hidden !important; }
        #print-area, #print-area * { visibility: visible !important; }
        #print-area {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }
        #btn-pdf, #btn-print, .ql-toolbar {
            display: none !important;
        }
        .documento-container {
            box-shadow: none !important;
            border: none !important;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="{{ path('clinica_dashboard') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Voltar
        </a>

        <div>
            <button id="btn-print" class="btn btn-success me-2">
                <i class="bi bi-printer"></i> Imprimir
            </button>
            <form id="form-pdf" method="POST" action="{{ path('clinica_receita_pdf') }}" class="d-inline">
                <input type="hidden" name="cabecalho">
                <input type="hidden" name="conteudo">
                <input type="hidden" name="rodape">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-file-earmark-pdf"></i> Salvar como PDF
                </button>
            </form>
            <form id="form-salvar-doc" method="POST" action="{{ path('clinica_documentos') }}" class="d-inline">
                <input type="hidden" name="titulo">
                <input type="hidden" name="cabecalho">
                <input type="hidden" name="conteudo">
                <input type="hidden" name="rodape">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-save"></i> Salvar Documento
                </button>
            </form>
            <form id="form-excluir-doc" method="POST" action="{{ path('clinica_documento_excluir', {'id': 0}) }}" class="d-none">
                <input type="hidden" name="_token" value="{{ csrf_token('delete_doc') }}">
            </form>
            <button id="btn-excluir-doc" class="btn btn-outline-danger">
                <i class="bi bi-trash"></i> Excluir Documento
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-7">
            <div class="documento-container">
                <h4 class="mb-3">Documento</h4>
                <select id="select-doc" class="form-select mb-3">
                    <option value="">Selecione um documento salvo</option>
                    {% for doc in documentos %}
                        <option value="{{ doc.id }}"
                                data-titulo="{{ doc.titulo }}"
                                data-cabecalho="{{ doc.cabecalho|raw }}"
                                data-conteudo="{{ doc.conteudo|raw }}"
                                data-rodape="{{ doc.rodape|raw }}">
                            {{ doc.titulo }}
                        </option>
                    {% endfor %}
                </select>

                <div class="mb-3">
                    <label for="titulo" class="form-label">T√≠tulo</label>
                    <input type="text" id="titulo" name="titulo" class="form-control">
                </div>

                <div class="mb-3">
                    <label>üè¢ Cabe√ßalho:</label>
                    <div id="editor-cabecalho" class="quill-editor"></div>
                </div>
                <div class="mb-3">
                    <label>üìÑ Conte√∫do:</label>
                    <div id="editor-conteudo" class="quill-editor"></div>
                </div>
                <div class="mb-3">
                    <label>üñäÔ∏è Rodap√©:</label>
                    <div id="editor-rodape" class="quill-editor"></div>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="documento-container">
                <h4 class="mb-3">Visualiza√ß√£o para impress√£o</h4>
                <div id="print-area">
                    <div class="documento-container">
                        <div id="print-cabecalho"></div>
                        <div id="print-conteudo" style="margin: 40px 0;"></div>
                        <div id="print-rodape"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('assets/vendors/quill/quill.js') }}"></script>
<script>
document.addEventListener("DOMContentLoaded", function () {
    const quillCabecalho = new Quill('#editor-cabecalho', { theme: 'snow' });
    const quillConteudo  = new Quill('#editor-conteudo', { theme: 'snow' });
    const quillRodape    = new Quill('#editor-rodape', { theme: 'snow' });

    const selectDoc = document.getElementById('select-doc');
    const tituloInput = document.getElementById('titulo');

    selectDoc.addEventListener('change', function () {
        const selected = this.options[this.selectedIndex];
        if (selected.value) {
            tituloInput.value = selected.dataset.titulo;
            quillCabecalho.root.innerHTML = selected.dataset.cabecalho;
            quillConteudo.root.innerHTML  = selected.dataset.conteudo;
            quillRodape.root.innerHTML    = selected.dataset.rodape;
        }
    });

    document.getElementById("btn-print").addEventListener("click", function () {
        document.getElementById('print-cabecalho').innerHTML = quillCabecalho.root.innerHTML;
        document.getElementById('print-conteudo').innerHTML  = quillConteudo.root.innerHTML;
        document.getElementById('print-rodape').innerHTML    = quillRodape.root.innerHTML;

        const printContent = document.getElementById("print-area").innerHTML;
        const win = window.open('', '_blank');
        win.document.write(`<html><head><title>Imprimir</title><style>body{font-family:Arial;}</style></head><body>${printContent}</body></html>`);
        win.document.close();
        win.focus();
        win.print();
    });

    document.getElementById("form-pdf").addEventListener("submit", function (e) {
        e.preventDefault();
        this.querySelector('[name="cabecalho"]').value = quillCabecalho.root.innerHTML;
        this.querySelector('[name="conteudo"]').value  = quillConteudo.root.innerHTML;
        this.querySelector('[name="rodape"]').value    = quillRodape.root.innerHTML;
        this.submit();
    });

    document.getElementById("form-salvar-doc").addEventListener("submit", function (e) {
        e.preventDefault();
        const titulo = document.getElementById("titulo").value.trim();
        if (!titulo) {
            alert("Voc√™ precisa dar um t√≠tulo ao documento antes de salvar.");
            return;
        }
        this.querySelector('[name="titulo"]').value    = titulo;
        this.querySelector('[name="cabecalho"]').value = quillCabecalho.root.innerHTML;
        this.querySelector('[name="conteudo"]').value  = quillConteudo.root.innerHTML;
        this.querySelector('[name="rodape"]').value    = quillRodape.root.innerHTML;
        this.submit();
    });

    document.getElementById("btn-excluir-doc").addEventListener("click", function () {
        const docId = document.getElementById('select-doc').value;
        if (!docId) {
            alert("Selecione um documento antes de excluir.");
            return;
        }
        if (confirm("Tem certeza que deseja excluir este documento? Esta a√ß√£o n√£o pode ser desfeita.")) {
            const form = document.getElementById("form-excluir-doc");
            form.setAttribute("action", form.getAttribute("action").replace('/0', '/' + docId));
            form.submit();
        }
    });
});
</script>
{% endblock %}
