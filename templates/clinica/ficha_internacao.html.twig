{% extends 'baseClinica.html.twig' %}

{% block title %}Ficha de Internação — {{ internacao.pet_nome }}{% endblock %}

{% block body %}
<style>
/* ═══════════════════════════════════════════════
   FICHA INTERNAÇÃO — Design System (same as detalhes_pet)
   Paleta: Teal clínico + Cinza sofisticado
═══════════════════════════════════════════════ */
:root {
    --dp-teal:       #4A6741;
    --dp-teal-dark:  #3B5E37;
    --dp-teal-light: #EBF2EA;
    --dp-teal-mid:   #B8D4B4;
    --dp-slate:      #3d4f5c;
    --dp-muted:      #7a8fa0;
    --dp-border:     #dde8e7;
    --dp-bg:         #f4f7f7;
    --dp-surface:    #ffffff;
    --dp-shadow-sm:  0 1px 4px rgba(42, 103, 98, 0.08);
    --dp-shadow-md:  0 4px 16px rgba(42, 103, 98, 0.12);
    --dp-radius:     12px;
    --dp-radius-lg:  18px;
}

body { background: var(--dp-bg); }

/* ── Hero ────────────────────────────────────────── */
.fi-hero {
    background: linear-gradient(135deg, var(--dp-teal) 0%, var(--dp-teal-dark) 100%);
    padding: 1.5rem 2rem 3.5rem;
    position: relative; overflow: hidden;
}
.fi-hero::before {
    content: '';
    position: absolute; inset: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.04'%3E%3Ccircle cx='30' cy='30' r='20'/%3E%3Ccircle cx='0' cy='0' r='10'/%3E%3Ccircle cx='60' cy='60' r='10'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    pointer-events: none;
}
.fi-hero-content { position: relative; z-index: 1; color: #fff; }
.fi-hero-title {
    font-size: 1.35rem; font-weight: 800; margin: 0 0 .3rem;
    display: flex; align-items: center; gap: .6rem;
}
.fi-hero-sub { font-size: .82rem; opacity: .7; margin: 0; }

.btn-outline-secondary.voltar-dash {
    font-size: .78rem; padding: .3rem .8rem; border-radius: 8px;
    color: rgba(255,255,255,.85) !important;
    border-color: rgba(255,255,255,.35) !important;
    background: transparent !important;
}
.btn-outline-secondary.voltar-dash:hover {
    background: rgba(255,255,255,.12) !important;
}

/* ── Pull-up body ────────────────────────────────── */
.fi-body {
    margin-top: -2.5rem; padding: 0 1.5rem 3rem;
    position: relative; z-index: 10;
}

/* ── Profile grid ────────────────────────────────── */
.fi-profile-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1rem; }
@media (max-width: 767px) { .fi-profile-grid { grid-template-columns: 1fr; } }

.fi-card {
    background: var(--dp-surface);
    border: 1px solid var(--dp-border);
    border-radius: var(--dp-radius-lg);
    box-shadow: var(--dp-shadow-md);
    overflow: hidden;
}

/* ── Pet card header ─────────────────────────────── */
.fi-pet-header {
    padding: 1.25rem 1.5rem .75rem;
    border-bottom: 1px solid var(--dp-border);
    display: flex; align-items: center; gap: 1rem;
}
.fi-pet-avatar {
    width: 52px; height: 52px; border-radius: 50%;
    background: var(--dp-teal-light);
    border: 2.5px solid var(--dp-teal-mid);
    display: flex; align-items: center; justify-content: center;
    color: var(--dp-teal); font-size: 1.3rem; flex-shrink: 0;
}
.fi-pet-name { font-size: 1.15rem; font-weight: 800; color: var(--dp-slate); margin: 0; line-height: 1.1; }
.fi-pet-id   { font-size: .72rem; color: var(--dp-muted); }

.fi-info-body  { padding: .9rem 1.5rem 1.1rem; }
.fi-info-row {
    display: flex; align-items: baseline; gap: .5rem;
    padding: .3rem 0; border-bottom: 1px solid #f0f4f4; font-size: .85rem;
}
.fi-info-row:last-child { border-bottom: none; }
.fi-info-label {
    font-weight: 600; color: var(--dp-muted); min-width: 90px;
    font-size: .75rem; text-transform: uppercase; letter-spacing: .04em; flex-shrink: 0;
}
.fi-info-value { color: var(--dp-slate); }

/* ── Status badge ────────────────────────────────── */
.fi-status-badge {
    display: inline-flex; align-items: center; gap: .35rem;
    border-radius: 100px; padding: .28rem .75rem;
    font-size: .72rem; font-weight: 700; text-transform: uppercase; letter-spacing: .04em;
}
.fi-status-ativa    { background: var(--dp-teal-light); color: var(--dp-teal-dark); border: 1.5px solid var(--dp-teal-mid); }
.fi-status-finalizada { background: #e8f5e9; color: #2E7D32; border: 1.5px solid #a5d6a7; }
.fi-status-obito    { background: #fce4e4; color: #b71c1c; border: 1.5px solid #ef9a9a; }
.fi-status-cancelada{ background: #fff3e0; color: #e65100; border: 1.5px solid #ffcc80; }

/* ── Urgency bar ─────────────────────────────────── */
.fi-urgency {
    display: inline-flex; align-items: center; gap: .4rem;
    border-radius: 100px; padding: .3rem .85rem;
    font-size: .75rem; font-weight: 700;
}
.fi-urg-nao_urgente   { background: var(--dp-teal-light); color: var(--dp-teal-dark); }
.fi-urg-pouco_urgente { background: #fffde7; color: #B8860B; }
.fi-urg-urgente       { background: #fff3e0; color: #e65100; }
.fi-urg-muito_urgente { background: #fce4e4; color: #c62828; }
.fi-urg-emergencia    { background: #3c0000; color: #ffcdd2; }

.fi-risk {
    display: inline-flex; align-items: center; gap: .35rem;
    border-radius: 100px; padding: .25rem .7rem;
    font-size: .72rem; font-weight: 700;
}
.fi-risk-baixo { background: var(--dp-teal-light); color: var(--dp-teal); }
.fi-risk-medio { background: #fffde7; color: #B8860B; }
.fi-risk-alto  { background: #fce4e4; color: #c62828; }

/* ── Action buttons ──────────────────────────────── */
.fi-actions {
    display: flex; gap: .6rem; flex-wrap: wrap;
    padding: .9rem 1.5rem; background: var(--dp-bg);
    border-radius: var(--dp-radius-lg); border: 1px solid var(--dp-border);
    margin-bottom: 1rem;
}
.btn-fi-action {
    display: inline-flex; align-items: center; gap: .4rem;
    padding: .48rem 1.1rem; border-radius: var(--dp-radius);
    font-size: .82rem; font-weight: 600; border: none; cursor: pointer;
    transition: transform .15s, box-shadow .15s;
}
.btn-fi-action:hover { transform: translateY(-1px); }
.btn-fi-alta    { background: linear-gradient(135deg, var(--dp-teal) 0%, var(--dp-teal-dark) 100%); color: #fff; box-shadow: 0 3px 10px rgba(74,103,65,.25); }
.btn-fi-obito   { background: linear-gradient(135deg, #b71c1c 0%, #c62828 100%); color: #fff; box-shadow: 0 3px 10px rgba(183,28,28,.25); }
.btn-fi-cancelar{ background: linear-gradient(135deg, #e65100 0%, #bf360c 100%); color: #fff; box-shadow: 0 3px 10px rgba(230,81,0,.25); }

/* ── Main card (tabs) ────────────────────────────── */
.fi-tabs-card {
    background: var(--dp-surface);
    border: 1px solid var(--dp-border);
    border-radius: var(--dp-radius-lg);
    box-shadow: var(--dp-shadow-sm);
    overflow: hidden;
}
.fi-nav-tabs {
    display: flex; overflow-x: auto; scrollbar-width: none;
    background: #f9fbfb; border-bottom: 1px solid var(--dp-border);
    padding: 0 .5rem;
}
.fi-nav-tabs::-webkit-scrollbar { display: none; }
.fi-nav-tabs .nav-link {
    border: none !important; border-radius: 0 !important;
    padding: .9rem 1.2rem; font-size: .82rem; font-weight: 600;
    color: var(--dp-muted) !important; white-space: nowrap;
    border-bottom: 2.5px solid transparent !important;
    background: transparent !important;
    transition: color .18s;
}
.fi-nav-tabs .nav-link.active {
    color: var(--dp-teal) !important;
    border-bottom-color: var(--dp-teal) !important;
}
.fi-nav-tabs .nav-link i { margin-right: .3rem; }

.fi-tab-body { padding: 1.5rem; }

/* ── Timeline ────────────────────────────────────── */
.dp-timeline { list-style: none; padding: 0; margin: 0; position: relative; }
.dp-timeline::before {
    content: ''; position: absolute; left: 18px; top: 0; bottom: 0; width: 2px;
    background: linear-gradient(180deg, var(--dp-teal-mid) 0%, #e0eded 100%);
}
.dp-timeline li { position: relative; padding: 0 0 1rem 3rem; }
.dp-timeline .timeline-badge {
    position: absolute; left: 6px; top: 4px;
    width: 26px; height: 26px; border-radius: 50%;
    color: #fff; display: flex; align-items: center; justify-content: center;
    font-size: .65rem; z-index: 1;
    box-shadow: 0 0 0 3px var(--dp-teal-light);
}
.dp-timeline .timeline-badge.bg-primary   { background: var(--dp-teal) !important; }
.dp-timeline .timeline-badge.bg-secondary { background: var(--dp-muted) !important; }
.dp-timeline .timeline-badge.bg-success   { background: #2B9E82 !important; }
.dp-timeline .timeline-badge.bg-warning   { background: #D4A017 !important; }
.dp-timeline .timeline-badge.bg-danger    { background: #C0392B !important; }
.dp-timeline .timeline-badge.bg-info      { background: #3A7CA5 !important; }
.dp-timeline .timeline-badge.bg-purple    { background: #7A5230 !important; }

.dp-timeline .timeline-panel {
    background: var(--dp-surface);
    border: 1px solid var(--dp-border) !important;
    border-radius: var(--dp-radius) !important;
    padding: .9rem 1.1rem !important;
    box-shadow: var(--dp-shadow-sm);
}
.dp-timeline .timeline-panel.border-start { border-left: 3px solid !important; }
.dp-timeline .timeline-panel.border-primary { border-left-color: var(--dp-teal) !important; }
.dp-timeline .timeline-panel.border-success { border-left-color: #2B9E82 !important; }
.dp-timeline .timeline-panel.border-warning { border-left-color: #D4A017 !important; }
.dp-timeline .timeline-panel.border-dark    { border-left-color: var(--dp-slate) !important; }
.dp-timeline .timeline-title { font-size: .88rem !important; font-weight: 700; color: var(--dp-slate); margin: 0; }

/* ── Prescription table ──────────────────────────── */
.fi-tab-body .table thead th {
    background: var(--dp-teal-light) !important;
    color: var(--dp-teal-dark) !important;
    font-size: .75rem; text-transform: uppercase;
    letter-spacing: .05em; font-weight: 700;
    border-bottom: 2px solid var(--dp-teal-mid) !important;
}
.fi-tab-body .table tbody tr:hover { background: rgba(235,242,234,.5) !important; }

/* ── Add buttons ─────────────────────────────────── */
.btn-fi-add {
    display: inline-flex; align-items: center; gap: .35rem;
    padding: .38rem .9rem; border-radius: var(--dp-radius);
    font-size: .8rem; font-weight: 600; border: none; cursor: pointer;
    transition: transform .15s, box-shadow .15s;
}
.btn-fi-add:hover { transform: translateY(-1px); }
.btn-fi-add-med {
    background: linear-gradient(135deg, #3A7CA5 0%, #2C5F80 100%);
    color: #fff; box-shadow: 0 3px 10px rgba(58,124,165,.25);
}
.btn-fi-add-presc {
    background: linear-gradient(135deg, var(--dp-teal) 0%, var(--dp-teal-dark) 100%);
    color: #fff; box-shadow: 0 3px 10px rgba(74,103,65,.25);
}

/* ── Alert finalizada ────────────────────────────── */
.fi-alta-banner {
    display: flex; align-items: center; gap: .75rem;
    background: #e8f5e9; border: 1px solid #a5d6a7;
    border-radius: var(--dp-radius); padding: .85rem 1.1rem;
    color: #2E7D32; font-weight: 600; font-size: .88rem;
}
</style>

<div style="background: var(--dp-bg); min-height: 100vh; padding-bottom: 3rem;">

    {# ── Hero ─────────────────────────────────────────────── #}
    <div class="fi-hero">
        <div class="fi-hero-content d-flex align-items-start justify-content-between flex-wrap gap-2">
            <div>
                <p class="fi-hero-title">
                    <i class="bi bi-hospital-fill"></i>
                    Ficha de Internação
                </p>
                <p class="fi-hero-sub">
                    {{ internacao.pet_nome }} · Iniciada em
                    {{ internacao.data_inicio ? internacao.data_inicio|date('d/m/Y') : '-' }}
                </p>
            </div>
            <a href="{{ path('clinica_detalhes_pet', {'id': internacao.pet_id}) }}"
               class="btn btn-outline-secondary voltar-dash">
                <i class="bi bi-arrow-left me-1"></i>Voltar à Ficha
            </a>
        </div>
    </div>

    <div class="fi-body">

        {# ── Profile grid: Pet + Dados clínicos ── #}
        <div class="fi-profile-grid">

            {# Card Pet #}
            <div class="fi-card">
                <div class="fi-pet-header">
                    <div class="fi-pet-avatar"><i class="bi bi-heart-pulse-fill"></i></div>
                    <div>
                        <p class="fi-pet-name">{{ internacao.pet_nome }}</p>
                        <span class="fi-pet-id">#{{ internacao.pet_id }}</span>
                    </div>
                </div>
                <div class="fi-info-body">
                    <div class="fi-info-row">
                        <span class="fi-info-label">Raça</span>
                        <span class="fi-info-value">{{ internacao.pet_raca ?? '-' }}</span>
                    </div>
                    <div class="fi-info-row">
                        <span class="fi-info-label">Sexo</span>
                        <span class="fi-info-value">{{ internacao.pet_sexo ?? '-' }}</span>
                    </div>
                    <div class="fi-info-row">
                        <span class="fi-info-label">Idade</span>
                        <span class="fi-info-value">{{ internacao.pet_idade ?? '-' }}</span>
                    </div>
                    <div class="fi-info-row">
                        <span class="fi-info-label">Tutor</span>
                        <span class="fi-info-value">
                            {{ internacao.dono_nome ?? '-' }}
                            {% if internacao.dono_id %}<small class="text-muted">(#{{ internacao.dono_id }})</small>{% endif %}
                        </span>
                    </div>
                </div>
            </div>

            {# Card internação #}
            <div class="fi-card">
                <div class="fi-pet-header">
                    <div class="fi-pet-avatar" style="background: #fff1e6; color: #C97D3A;">
                        <i class="bi bi-clipboard2-pulse-fill"></i>
                    </div>
                    <div>
                        <p class="fi-pet-name">Dados da Internação</p>
                        <div class="d-flex flex-wrap gap-1 mt-1">
                            {# Status #}
                            {% set st = internacao.status ?? 'ativa' %}
                            <span class="fi-status-badge fi-status-{{ st }}">
                                <i class="bi bi-circle-fill" style="font-size:.45rem;"></i>
                                {{ st|capitalize }}
                            </span>
                            {# Urgência #}
                            {% if internacao.situacao %}
                                <span class="fi-urgency fi-urg-{{ internacao.situacao }}">
                                    {{ internacao.situacao|replace({'_': ' '})|title }}
                                </span>
                            {% endif %}
                            {# Risco #}
                            {% if internacao.risco %}
                                <span class="fi-risk fi-risk-{{ internacao.risco }}">
                                    Risco {{ internacao.risco|capitalize }}
                                </span>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="fi-info-body">
                    <div class="fi-info-row">
                        <span class="fi-info-label">Motivo</span>
                        <span class="fi-info-value">{{ internacao.motivo ?? '-' }}</span>
                    </div>
                    <div class="fi-info-row">
                        <span class="fi-info-label">Box</span>
                        <span class="fi-info-value">{{ internacao.box ?? 'Não definido' }}</span>
                    </div>
                    <div class="fi-info-row">
                        <span class="fi-info-label">Veterinário</span>
                        <span class="fi-info-value">{{ internacao.veterinario_nome ?? '-' }}</span>
                    </div>
                    <div class="fi-info-row">
                        <span class="fi-info-label">Prognóstico</span>
                        <span class="fi-info-value">{{ internacao.prognostico is defined ? internacao.prognostico : '-' }}</span>
                    </div>
                    <div class="fi-info-row">
                        <span class="fi-info-label">Alta prevista</span>
                        <span class="fi-info-value">
                            {{ internacao.alta_prevista ? internacao.alta_prevista|date('d/m/Y') : '-' }}
                        </span>
                    </div>
                    <div class="fi-info-row">
                        <span class="fi-info-label">Duração</span>
                        <span class="fi-info-value">{{ internacao.duracao ?? '-' }}</span>
                    </div>
                </div>
            </div>

        </div>{# /fi-profile-grid #}

        {# ── Anotações ── #}
        {% if internacao.anotacoes is not empty %}
        <div class="fi-card mb-3 p-3">
            <p class="mb-1" style="font-size:.72rem;font-weight:700;text-transform:uppercase;letter-spacing:.08em;color:var(--dp-muted);">
                <i class="bi bi-chat-left-text me-1"></i>Anotações
            </p>
            <div class="text-muted" style="font-size:.88rem;">{{ internacao.anotacoes|raw }}</div>
        </div>
        {% endif %}

        {# ── Botões de ação ── #}
        {% if internacao.status == 'finalizada' %}
            <div class="fi-alta-banner mb-3">
                <i class="bi bi-check-circle-fill fs-5"></i>
                Alta concedida — esta internação está encerrada.
            </div>
        {% else %}
            <div class="fi-actions">
                <span style="font-size:.72rem;font-weight:700;text-transform:uppercase;letter-spacing:.08em;color:var(--dp-muted);align-self:center;">
                    Ações:
                </span>
                <button class="btn-fi-action btn-fi-alta internacao-acao"
                        data-url="{{ path('clinica_internacao_acao', {id: internacao.id, acao: 'alta'}) }}"
                        data-token="{{ csrf_token('internacao_acao_' ~ internacao.id) }}">
                    <i class="bi bi-check-lg"></i> Alta
                </button>
                <button class="btn-fi-action btn-fi-obito internacao-acao"
                        data-url="{{ path('clinica_internacao_acao', {id: internacao.id, acao: 'obito'}) }}"
                        data-token="{{ csrf_token('internacao_acao_' ~ internacao.id) }}">
                    <i class="fas fa-skull"></i> Óbito
                </button>
                <button class="btn-fi-action btn-fi-cancelar internacao-acao"
                        data-url="{{ path('clinica_internacao_acao', {id: internacao.id, acao: 'cancelar'}) }}"
                        data-token="{{ csrf_token('internacao_acao_' ~ internacao.id) }}">
                    <i class="bi bi-slash-circle"></i> Cancelar
                </button>
            </div>
        {% endif %}

        {# ── Tabs principais ── #}
        <div class="fi-tabs-card">
            <ul class="fi-nav-tabs nav" id="internacaoTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="historico-tab"
                            data-bs-toggle="tab" data-bs-target="#historico-content" type="button">
                        <i class="bi bi-clock-history"></i>Histórico
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="prescricao-tab"
                            data-bs-toggle="tab" data-bs-target="#prescricao-content" type="button">
                        <i class="bi bi-capsule"></i>Prescrição e Calendário
                    </button>
                </li>
            </ul>

            <div class="tab-content" id="internacaoTabContent">

                {# ── Tab: Histórico ── #}
                <div class="tab-pane fade show active fi-tab-body" id="historico-content" role="tabpanel">
                    <div style="max-height: 480px; overflow-y: auto; padding-right: .25rem;">
                        <ul class="dp-timeline">
                            {% for ev in timeline|default([]) %}
                                {% set tipo = (ev.tipo ?? 'internacao')|lower %}
                                {% set icone = 'fa-notes-medical' %}
                                {% set badge = 'bg-secondary' %}
                                {% if tipo in ['consulta','retorno'] %}
                                    {% set icone, badge = 'fa-stethoscope', 'bg-primary' %}
                                {% elseif tipo == 'receita' %}
                                    {% set icone, badge = 'fa-file-prescription', 'bg-purple' %}
                                {% elseif tipo in ['medicacao','medicação','medicacao_exec','execucao'] %}
                                    {% set icone, badge = 'fa-pills', 'bg-info' %}
                                {% elseif tipo == 'peso' %}
                                    {% set icone, badge = 'fa-weight', 'bg-warning' %}
                                {% elseif tipo in ['ocorrencia','ocorrência','alerta'] %}
                                    {% set icone, badge = 'fa-exclamation-circle', 'bg-danger' %}
                                {% elseif tipo == 'alta' %}
                                    {% set icone, badge = 'fa-hospital', 'bg-success' %}
                                {% elseif tipo == 'obito' %}
                                    {% set icone, badge = 'fa-hospital', 'bg-danger' %}
                                {% elseif tipo == 'cancelar' %}
                                    {% set icone, badge = 'fa-hospital', 'bg-warning' %}
                                {% elseif tipo in ['internacao','internação','admissao','admissão'] %}
                                    {% set icone, badge = 'fa-hospital', 'bg-primary' %}
                                {% endif %}
                                <li class="timeline-item">
                                    <div class="timeline-badge {{ badge }}">
                                        <i class="fas {{ icone }}"></i>
                                    </div>
                                    <div class="timeline-panel">
                                        <h5 class="timeline-title">{{ ev.titulo|default(tipo|capitalize) }}</h5>
                                        <small class="text-muted">
                                            {{ ev.data_hora|date('d/m/Y H:i')|default('-') }}
                                        </small>
                                        {% if ev.descricao %}
                                            <p class="text-muted mb-0 mt-1" style="font-size:.84rem;">{{ ev.descricao|raw }}</p>
                                        {% endif %}
                                    </div>
                                </li>
                            {% else %}
                                <li class="ms-2 text-muted" style="font-size:.88rem;">
                                    <i class="bi bi-inbox me-1"></i>Nenhum evento registrado ainda.
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>

                {# ── Tab: Prescrições + Calendário ── #}
                <div class="tab-pane fade fi-tab-body" id="prescricao-content" role="tabpanel">

                    <div class="d-flex justify-content-end gap-2 mb-3">
                        <button class="btn-fi-add btn-fi-add-med modal-NovoMedicamento">
                            <i class="bi bi-plus-lg"></i>Adicionar Medicamento
                        </button>
                        <button class="btn-fi-add btn-fi-add-presc modalPrescricaoBtn">
