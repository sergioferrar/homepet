{% block javascripts %}
<script src='https://cdn.jsdelivr.net/npm/@fullcalendar/core@6.1.19/locales-all.global.min.js'></script>
<script>
$(function () {

    // ── Ações de Internação (Alta / Óbito / Cancelar) ───────────
    $(document).on('click', '.internacao-acao', async function (e) {
        e.preventDefault();
        const $btn  = $(this);
        const url   = $btn.data('url');
        const token = $btn.data('token');
        let msg = 'Confirmar esta ação na internação?';
        if (url.includes('alta'))    msg = 'Confirmar alta desta internação?';
        if (url.includes('obito'))   msg = 'Confirmar óbito desta internação?';
        if (url.includes('cancelar'))msg = 'Confirmar cancelamento desta internação?';

        Utils.modal(msg, 'primary', function () {
            $.ajax({
                url, method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded; charset=UTF-8' },
                data: { _token: token },
                success: function (resp) {
                    if (resp.ok === true) {
                        Utils.modal('Ação registrada com sucesso!', 'success', function () { location.reload(); });
                    } else {
                        Utils.modal(resp.msg, 'danger');
                    }
                },
                error: function () { Utils.modal('Erro ao processar ação.', 'danger'); }
            });
        }, 'md', 'Mensagem do sistema', 'Confirmar', 'Cancelar');
    });

    // ── Nova Prescrição ─────────────────────────────────────────
    $('.modalPrescricaoBtn').on('click', function () {
        Utils.modal($('.modalPrescricao').html(), 'secondary', function () {
            const d = $('.modal #formPrescricao');
            Utils.globalPostAjax(d.attr('action'), {
                medicamentoId:           d.find('[name="medicamento_id"]').val(),
                dose:                    d.find('[name="dose"]').val(),
                frequencia_horas:        d.find('[name="frequencia_horas"]').val(),
                duracao_dias:            d.find('[name="duracao_dias"]').val(),
                data_hora_primeira_dose: d.find('[name="data_hora_primeira_dose"]').val(),
            }, function () { window.location.reload(); });
        }, 'lg', 'Nova Prescrição', 'Salvar', 'Cancelar', '');
    });

    // ── Novo Medicamento ────────────────────────────────────────
    $('.modal-NovoMedicamento').on('click', function () {
        Utils.modal($('.modalNovoMedicamento').html(), 'secondary', function () {
            const f = $('.modal #formNovoMedicamento');
            $.ajax({
                type: 'post', dataType: 'json', url: f.attr('action'),
                data: { nome: f.find('[name="nome"]').val(), via: f.find('[name="via"]').val(), concentracao: f.find('[name="concentracao"]').val() },
                success: function (r) {
                    if (r.ok) { Utils.modal(r.msg, 'success', function () { location.reload(); }); }
                    else { Utils.modal(r.msg, 'danger'); }
                },
                error: function () { Utils.modal('Erro interno.', 'danger'); }
            });
        }, 'md', 'Adicionar Novo Medicamento', 'Salvar Medicamento', 'Cancelar');
    });

    // ── Calendário ──────────────────────────────────────────────
    const calEl = document.getElementById('calendar-pet');
    const eventos = {{ calendario_prescricoes|json_encode|raw }};

    function toLocal(date) {
        const p = n => n < 10 ? '0' + n : n;
        return date.getFullYear() + '-' + p(date.getMonth()+1) + '-' + p(date.getDate()) +
               'T' + p(date.getHours()) + ':' + p(date.getMinutes());
    }

    if (calEl) {
        window.calendar = new FullCalendar.Calendar(calEl, {
            initialView: 'timeGridWeek',
            locale: 'pt-br',
            height: 650,
            slotMinTime: '00:00:00', slotMaxTime: '24:00:00', allDaySlot: false,
            headerToolbar: { left: 'prev,next today', center: 'title', right: 'timeGridDay,timeGridWeek,dayGridMonth' },
            events: eventos,

            dateClick: function (info) {
                $('[name="data_hora_primeira_dose"]').attr('value', toLocal(new Date(info.date)));
                Utils.modal($('.modalPrescricao').html(), 'secondary', function () {
                    const d = $('.modal #formPrescricao');
                    Utils.globalPostAjax(d.attr('action'), {
                        medicamentoId: d.find('[name="medicamento_id"]').val(),
                        dose: d.find('[name="dose"]').val(),
                        frequencia_horas: d.find('[name="frequencia_horas"]').val(),
                        duracao_dias: d.find('[name="duracao_dias"]').val(),
                        data_hora_primeira_dose: d.find('[name="data_hora_primeira_dose"]').val(),
                    }, function () { window.location.reload(); });
                }, 'lg', 'Nova Prescrição', 'Salvar', 'Cancelar', '');
            },

            eventClick: function (info) {
                const prescricaoId   = info.event.extendedProps.prescricao_id;
                const habilitaModal  = info.event.extendedProps.habilita_modal;
                const url = "{{ path('clinica_internacao_prescricao_executar',{id: internacao.id, eventoId: 'PRESCRICAO_ID'}) }}"
                            .replace('PRESCRICAO_ID', prescricaoId);
                $('[name="hora_aplicacao"]').attr('value', toLocal(new Date(info.event.start)));

                if (habilitaModal == false) {
                    Utils.modal('Esta prescrição já foi executada', 'secondary');
                    return;
                }
                Utils.modal($('.modalexecutaprescricao').html(), 'secondary', function () {
                    Utils.globalPostAjax(url, {
                        hora_aplicacao:  $('#formExecutarPrescricao [name="hora_aplicacao"]').val(),
                        veterinario_id:  $('#formExecutarPrescricao [name="veterinario_id"]').val(),
                        anotacoes:       $('#formExecutarPrescricao [name="anotacoes"]').val(),
                    }, function (r) {
                        if (r.ok) { Notify.toast(r.msg || 'Executado!', 'success'); window.calendar.refetchEvents(); window.location.reload(); }
                        else { Utils.modal(r.msg, 'danger'); }
                    });
                }, 'md', 'Executar Prescrição', 'Confirmar', 'Cancelar');
            }
        });
        window.calendar.render();
    }

    $('#prescricao-tab').on('click', function () { window.calendar && window.calendar.render(); });

});
</script>
{% endblock %}
