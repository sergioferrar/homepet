{% extends 'base.html.twig' %}
{% block title %}Relat√≥rio de Vendas{% endblock %}

{% block body %}
<div class="container-fluid bg-white p-4 mt-4 rounded shadow-sm">

    <!-- üîπ Barra de navega√ß√£o -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0"><i class="fas fa-list"></i> Relat√≥rio de Vendas (PDV)</h3>
        <div>
            <a href="{{ path('clinica_pdv_index') }}" class="btn btn-outline-primary me-2">
                <i class="fas fa-cash-register"></i> PDV
            </a>
            <a href="{{ path('clinica_pdv_caixa') }}" class="btn btn-outline-success">
                <i class="fas fa-wallet"></i> Fechamento de Caixa
            </a>
        </div>
    </div>
    <hr>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Data</th>
                <th>Cliente</th>
                <th>Valor</th>
                <th>Forma de Pagamento</th>
            </tr>
        </thead>
        <tbody>
            {% for v in vendas %}
                <tr>
                    <td>{{ v.id }}</td>
                    <td>{{ v.data|date('d/m/Y H:i') }}</td>
                    <td>{{ v.cliente }}</td>
                    <td>R$ {{ v.total|number_format(2, ',', '.') }}</td>
                    <td>{{ v.metodoPagamento|upper }}</td>
                </tr>
            {% else %}
                <tr><td colspan="5" class="text-center text-muted">Nenhuma venda encontrada.</td></tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
