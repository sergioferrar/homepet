{% extends 'base.html.twig' %}
{% block title %}PDV - Ponto de Venda{% endblock %}
{% block page_title %}<i class="fas fa-cash-register me-2"></i> Ponto de Venda{% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<style>
.autocomplete-suggestions {
    border: 1px solid #ccc;
    background: #fff;
    position: absolute;
    z-index: 1000;
    max-height: 200px;
    overflow-y: auto;
    width: 100%;
    border-radius: 6px;
}
.autocomplete-suggestion {
    padding: 8px;
    cursor: pointer;
}
.autocomplete-suggestion:hover {
    background: #007bff;
    color: #fff;
}
</style>
{% endblock %}

{% block body %}
