{% extends 'base.html.twig' %}
{% block title %}Movimenta√ß√µes de Estoque{% endblock %}

{% block body %}
<div class="container-fluid bg-white p-4 mt-4 rounded shadow-sm">

    <!-- üîπ Barra de navega√ß√£o -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0"><i class="fas fa-history me-2"></i> Movimentos de {{ produto.nome }}</h3>
        <div class="d-flex gap-2">
            <a href="{{ path('clinica_estoque_index') }}" class="btn btn-outline-dark">
                <i class="fas fa-boxes"></i> Estoque
            </a>
            <a href="{{ path('clinica_pdv_index') }}" class="btn btn-outline-success">
                <i class="bi bi-cash"></i> PDV
            </a>
        </div>
    </div>
    <hr>

    <!-- Tabela de movimentos -->
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Data</th>
                <th>Tipo</th>
                <th>Quantidade</th>
                <th>Origem</th>
            </tr>
        </thead>
        <tbody>
            {% for m in movimentos %}
                <tr>
                    <td>{{ m.data|date('d/m/Y H:i') }}</td>
                    <td>
                        {% if m.tipo == 'ENTRADA' %}
                            <span class="badge bg-success">{{ m.tipo }}</span>
                        {% else %}
                            <span class="badge bg-danger">{{ m.tipo }}</span>
                        {% endif %}
                    </td>
                    <td>{{ m.quantidade }}</td>
                    <td>{{ m.origem|default('-') }}</td>
                </tr>
            {% else %}
                <tr><td colspan="4" class="text-center text-muted">Nenhum movimento registrado.</td></tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
