            const total = valorBase * qtd;
            const id = $input.attr('id').replace('quantidade-diarias-', '');

            $(`#valor-total-${id}`).val(total.toFixed(2));
            $(`#preview-total-${id}`).text(`💰 Total: R$ ${total.toFixed(2).replace('.', ',')}`);
        }

