                        {% set total_vendas = 0 %}
                        {% for f in todos_financeiros %}
                            {% set total_vendas = total_vendas + (f.valor ?? 0) %}
                        {% endfor %}

                        <div class="d-flex justify-content-between mt-3">
                            <h5 class="mb-0">Total</h5>
