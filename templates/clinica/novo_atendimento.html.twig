{% extends 'base.html.twig' %}

{% block title %}Novo Atendimento - {{ pet.nome }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bx bxs-briefcase-alt-2 me-2"></i>Registrar Novo Atendimento</h4>
        </div>
        <div class="card-body p-4">
            
            <form method="post" id="form-atendimento">
                {# Campo hidden para enviar o conteúdo do editor Quill #}
                <input type="hidden" name="anamnese" id="anamnese-input">

                <div class="row">
                    <div class="col-md-6">
                         <div class="form-group mb-3">
                            <label for="cliente_id" class="form-label">Cliente</label>
                            {# O cliente do pet já vem selecionado #}
                            <select id="cliente_id" name="cliente_id" class="form-select" required>
                                <option>Selecione um cliente...</option>
                                {% for cliente in clientes %}
                                    <option value="{{ cliente.id }}" {{ pet.dono_id == cliente.id ? 'selected' : '' }}>
                                        {{ cliente.nome }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="pet_id" class="form-label">Pet</label>
                            {# O pet já vem selecionado #}
                            <select id="pet_id" name="pet_id" class="form-select" required>
                                <option value="{{ pet.id }}" selected>{{ pet.nome }}</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label for="data" class="form-label">Data do Atendimento</label>
                            {# A data já vem como hoje #}
                            <input type="date" id="data" name="data" class="form-control" value="{{ "now"|date("Y-m-d") }}" required>
                        </div>
                    </div>
                    <div class="col-md-4">
                         <div class="form-group mb-3">
                            <label for="hora" class="form-label">Hora do Atendimento</label>
                            {# A hora já vem como agora #}
                            <input type="time" id="hora" name="hora" class="form-control" value="{{ "now"|date("H:i") }}" required>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label for="tipo" class="form-label">Tipo</label>
                            <select class="form-select" name="tipo">
                                <option value="Atendimento Clínico" selected>Atendimento Clínico</option>
                                <option value="Vacina">Vacina</option>
                                <option value="Retorno">Retorno</option>
                                <option value="Procedimento">Procedimento</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="observacoes" class="form-label">Observações Rápidas (Queixa Principal)</label>
                    <input type="text" id="observacoes" name="observacoes" class="form-control" placeholder="Ex: Vômito e diarreia há 2 dias">
                </div>
                
                <div class="mb-3">
                    <label class="form-label fs-5">Anamnese / Exame Clínico</label>
                    <div id="atendimento-editor" style="min-height: 300px; border-radius: 5px;"></div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a href="{{ path('clinica_detalhes_pet', {'id': pet.id}) }}" class="btn btn-secondary me-2">Cancelar</a>
                    <button type="submit" class="btn btn-success"><i class='bx bxs-save me-1'></i>Salvar Atendimento</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializa o editor Quill
            const quill = new Quill('#atendimento-editor', {
                theme: 'snow',
                modules: {
                    toolbar: [
                        [{ 'header': [1, 2, 3, false] }],
                        ['bold', 'italic', 'underline'],
                        [{'list': 'ordered'}, {'list': 'bullet'}],
                        ['clean']
                    ]
                }
            });
            quill.root.innerHTML = '<p><strong>Anamnese:</strong><br></p><p><br></p><p><strong>Exame Clínico:</strong><br></p>';

            // Lógica para carregar pets quando o cliente muda
            const clienteSelect = document.getElementById('cliente_id');
            const petSelect = document.getElementById('pet_id');

            clienteSelect.addEventListener('change', function () {
                const clienteId = this.value;
                if (!clienteId) {
                    petSelect.innerHTML = '<option value="">Selecione um cliente primeiro</option>';
                    return;
                }
                
                const url = '{{ path("clinica_api_pets", {"clienteId": "CLIENTE_ID"}) }}'.replace('CLIENTE_ID', clienteId);

                fetch(url)
                    .then(resp => resp.json())
                    .then(data => {
                        petSelect.innerHTML = '';
                        if (data.length === 0) {
                            petSelect.innerHTML = '<option value="">Nenhum pet encontrado</option>';
                        } else {
                            data.forEach(pet => {
                                const opt = document.createElement('option');
                                opt.value = pet.id;
                                opt.innerText = pet.nome;
                                petSelect.appendChild(opt);
                            });
                        }
                    })
                    .catch(err => console.error(err));
            });

            // Copia o conteúdo do Quill para o input hidden antes de submeter
            const form = document.getElementById('form-atendimento');
            form.addEventListener('submit', function(e) {
                const anamneseInput = document.getElementById('anamnese-input');
                anamneseInput.value = quill.root.innerHTML;
            });
        });
    </script>
{% endblock %}
