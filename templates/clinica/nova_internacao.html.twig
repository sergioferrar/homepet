{% extends 'base.html.twig' %}

{% block title %}Nova Internação{% endblock %}

{% block body %}
<div class="container-fluid my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4>Adicionar Internação</h4>
            <a href="{{ path('clinica_detalhes_pet', {'id': pet.id}) }}" class="btn btn-light">
                <i class="fas fa-arrow-left me-2"></i>Voltar
            </a>
        </div>
        <div class="card-body">
            <h5 class="mb-2">
                {{ pet.nome }} ({{ pet.id }})
                <small class="text-muted fw-normal">{{ pet.raca }} - {{ pet.sexo }} - {{ pet.idade }} anos</small>
            </h5>
            <hr>

            <form action="{{ path('clinica_nova_internacao', {'petId': pet.id}) }}" method="post">
                <div class="row g-3 mb-4">
                    <div class="col-md-3">
                        <label for="situacao" class="form-label">Situação*</label>
                        <select id="situacao" name="situacao" class="form-select" required>
                            <option value="">Selecione...</option>
                            <option value="nao_urgente">Não urgente</option>
                            <option value="pouco_urgente">Pouco urgente</option>
                            <option value="urgente">Urgente</option>
                            <option value="muito_urgente">Muito urgente</option>
                            <option value="emergencia">Emergência</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="risco" class="form-label">Risco*</label>
                        <select id="risco" name="risco" class="form-select" required>
                            <option value="">Selecione...</option>
                            {# Adicione as opções de risco aqui #}
                            <option value="baixo">Baixo</option>
                            <option value="medio">Médio</option>
                            <option value="alto">Alto</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="veterinario" class="form-label">Veterinário*</label>
                        <select id="veterinario" name="veterinario_id" class="form-select" required>
                            <option value="">Selecione...</option>
                            {% for veterinario in veterinarios %}
                                <option value="{{ veterinario.id }}">{{ veterinario.nome }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="box" class="form-label">Box</label>
                        <select id="box" name="box" class="form-select">
                            <option value="">Sem box definido</option>
                            {% for box in boxes %}
                                <option value="{{ box.nome }}">{{ box.nome }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="alta_prevista" class="form-label">Alta Prevista</label>
                        <input type="date" id="alta_prevista" name="alta_prevista" class="form-control">
                    </div>
                </div>

                <ul class="nav nav-tabs" id="internacaoTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="info-medicas-tab" data-bs-toggle="tab" data-bs-target="#info-medicas" type="button" role="tab" aria-controls="info-medicas" aria-selected="true">
                            <i class="fas fa-info-circle me-2"></i>Informações médicas
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="acessorios-tab" data-bs-toggle="tab" data-bs-target="#acessorios" type="button" role="tab" aria-controls="acessorios" aria-selected="false">
                            <i class="fas fa-tools me-2"></i>Acessórios e Observações
                        </button>
                    </li>
                </ul>
                <div class="tab-content border border-top-0 p-3 mb-4" id="internacaoTabContent">
                    <div class="tab-pane fade show active" id="info-medicas" role="tabpanel" aria-labelledby="info-medicas-tab">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label for="queixa" class="form-label">Queixa*</label>
                                <textarea id="queixa" name="queixa" class="form-control" rows="5" required></textarea>
                            </div>
                            <div class="col-md-4">
                                <label for="diagnostico" class="form-label">Diagnóstico</label>
                                <textarea id="diagnostico" name="diagnostico" class="form-control" rows="5"></textarea>
                            </div>
                            <div class="col-md-4">
                                <label for="prognostico" class="form-label">Prognóstico</label>
                                <textarea id="prognostico" name="prognostico" class="form-control" rows="5"></textarea>
                            </div>
                        </div>
                        <div class="mt-3">
                            <label for="alergias_marcacoes" class="form-label">Alergias e marcações (Digite o texto e pressione enter)</label>
                            <input type="text" id="alergias_marcacoes" name="alergias_marcacoes" class="form-control">
                        </div>
                    </div>
                    <div class="tab-pane fade" id="acessorios" role="tabpanel" aria-labelledby="acessorios-tab">
                        {# Conteúdo para acessórios e observações #}
                        <p class="text-muted">Adicione aqui informações sobre acessórios ou observações adicionais.</p>
                        <textarea class="form-control" rows="5" name="observacoes_acessorios"></textarea>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success me-2"><i class="fas fa-save me-2"></i>Salvar</button>
                    <a href="{{ path('clinica_detalhes_pet', {'id': pet.id}) }}" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}