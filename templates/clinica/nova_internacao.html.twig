{% extends 'base.html.twig' %}

{% block title %}Nova Internação - {{ pet.nome }}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bx bxs-hotel me-2"></i>Nova Internação</h4>
        </div>
        <div class="card-body p-4">
            <div class="p-3 mb-4 bg-light border rounded">
                <h5>Pet: <strong>{{ pet.nome }} ({{ pet.id }})</strong></h5>
                <small class="text-muted">{{ pet.raca }}, {{ pet.sexo }}, {{ pet.idade }} anos</small>
            </div>

            <form method="post">
                <div class="row g-3">
                    <div class="col-md-3"><label class="form-label">Situação*</label><select name="situacao" class="form-select" required><option value="">Selecione...</option><option>Estável</option><option>Grave</option><option>Crítico</option></select></div>
                    <div class="col-md-3"><label class="form-label">Risco*</label><select name="risco" class="form-select" required><option value="">Selecione...</option><option>Baixo</option><option>Médio</option><option>Alto</option></select></div>
                    <div class="col-md-2"><label class="form-label">Veterinário</label><select name="veterinario" class="form-select"><option value="">Selecione...</option>{# Popular com dados #}</select></div>
                    <div class="col-md-2"><label class="form-label">Box</label><select name="box" class="form-select"><option value="">Sem box definido</option>{# Popular com dados #}</select></div>
                    <div class="col-md-2"><label class="form-label">Alta Prevista</label><input name="alta_prevista" type="date" class="form-control"></div>
                </div>
                <hr class="my-4">
                <div class="row g-3">
                    <div class="col-md-4"><label class="form-label">Queixa Principal*</label><textarea name="queixa" class="form-control" rows="4" required></textarea></div>
                    <div class="col-md-4"><label class="form-label">Diagnóstico</label><textarea name="diagnostico" class="form-control" rows="4"></textarea></div>
                    <div class="col-md-4"><label class="form-label">Prognóstico</label><textarea name="prognostico" class="form-control" rows="4"></textarea></div>
                </div>
                <div class="d-flex justify-content-end mt-4">
                    <a href="{{ path('clinica_detalhes_pet', {'id': pet.id}) }}" class="btn btn-secondary me-2">Cancelar</a>
                    <button type="submit" class="btn btn-success"><i class='bx bxs-save me-1'></i>Salvar Internação</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
