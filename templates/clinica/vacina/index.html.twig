{% extends 'base.html.twig' %}

{% block title %}Vacinas do Pet{% endblock %}

{% block body %}
<div class="container mt-4">
    <h3>ðŸ“Œ Vacinas do Pet #{{ petId }}</h3>

    <!-- BotÃ£o abrir modal -->
    <button id="btn-nova-vacina" class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#modalVacina">
        + Nova Vacina
    </button>

    <!-- Tabela de vacinas -->
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Tipo</th>
                <th>Data AplicaÃ§Ã£o</th>
                <th>Data Validade</th>
                <th>Lote</th>
                <th>AÃ§Ãµes</th>
            </tr>
        </thead>
        <tbody>
            {% if vacinas is not empty %}
                {% for v in vacinas %}
                    <tr>
                        <td>{{ v.tipo }}</td>
                        <td>{{ v.data_aplicacao ? v.data_aplicacao|date('d/m/Y') : '-' }}</td>
                        <td>{{ v.data_validade ? v.data_validade|date('d/m/Y') : '-' }}</td>
                        <td>{{ v.lote ?: '-' }}</td>
                        <td>
                            <form method="post" action="{{ path('clinica_vacina_remover', {petId: petId, id: v.id}) }}" class="d-inline">
                                <button class="btn btn-sm btn-danger" onclick="return confirm('Remover vacina?')">
                                    Remover
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Nenhuma vacina registrada.</td>
                </tr>
            {% endif %}
        </tbody>
    </table>
</div>

<!-- Modal Nova Vacina -->
<div class="modal fade" id="modalVacina" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="formNovaVacina" method="post" action="{{ path('clinica_vacina_nova', {petId: petId}) }}">
                <div class="modal-header">
                    <h5 class="modal-title">Registrar Vacina</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="_token" value="{{ csrf_token('nova_vacina_' ~ petId) }}">

                    <div class="mb-3">
                        <label for="tipo" class="form-label">Tipo</label>
                        <input type="text" name="tipo" id="tipo" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="data_aplicacao" class="form-label">Data AplicaÃ§Ã£o</label>
                        <input type="date" name="data_aplicacao" id="data_aplicacao" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="data_validade" class="form-label">Data Validade</label>
                        <input type="date" name="data_validade" id="data_validade" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="lote" class="form-label">Lote</label>
                        <input type="text" name="lote" id="lote" class="form-control">
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', () => {
    // --- Salvar nova vacina ---
    const formVac = document.querySelector('#formNovaVacina');
    if (formVac) {
        formVac.addEventListener('submit', async e => {
            e.preventDefault();
            try {
                const resp = await fetch(formVac.action, {
                    method: 'POST',
                    body: new FormData(formVac)
                });
                const data = await resp.json();
                if (data.ok) {
                    alert(data.msg || "Vacina registrada!");
                    location.reload();
                } else {
                    alert(data.msg || "Erro ao registrar vacina.");
                }
            } catch (err) {
                alert('Erro ao registrar vacina.');
            }
        });
    }

    // --- Remover vacina via AJAX ---
    document.querySelectorAll('form[action*="vacina"]').forEach(form => {
        form.addEventListener('submit', async e => {
            e.preventDefault();
            if (!confirm('Deseja remover esta vacina?')) return;

            try {
                const resp = await fetch(form.action, { method: 'POST' });
                const data = await resp.json();

                if (data.ok) {
                    const row = form.closest('tr');
                    if (row) {
                        // AnimaÃ§Ã£o para desaparecer a linha
                        row.style.transition = 'opacity 0.3s';
                        row.style.opacity = '0';
                        setTimeout(() => row.remove(), 300);
                    }
                } else {
                    alert(data.msg || "Erro ao remover vacina.");
                }
            } catch (err) {
                alert('Erro ao remover vacina.');
            }
        });
    });
});
</script>
{% endblock %}

