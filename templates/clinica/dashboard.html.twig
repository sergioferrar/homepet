{% extends 'base.html.twig' %}
{% block title %}Painel de Controle{% endblock %}

{% block stylesheets %}
<style>
.card-listagem-scroll { max-height: 416px; overflow-y: auto; }
.card-body-fixo { height: 500px; overflow-y: 500px; }
</style>
{% endblock %}

{% block body %}

<!-- üîç Pesquisa -->
<div class="container-fluid mt-5">
    <h3 class="text-primary mb-4">Pesquisar Pet ou Tutor</h3>
    <form method="get" action="{{ path('clinica_dashboard') }}" class="row mb-3">
        <div class="col-10">
            <input type="text" name="q" value="{{ termo }}" class="form-control form-control-md"
                   placeholder="üîç Pesquisar por nome ou tutor..." />
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-primary w-100">Buscar</button>
        </div>
    </form>

    {% if termo %}
        <div class="row gy-3">
            {% for pet in pets %}
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5>
                                <a href="{{ path('clinica_detalhes_pet', {'id': pet.id}) }}" class="text-primary">
                                    {{ pet.nome }}
                                </a>
                            </h5>
                            <p class="mb-1"><i class="bx bx-user"></i> {{ pet.dono_nome }}</p>
                            <p class="mb-0"><i class="bx bx-shape-circle"></i> {{ pet.especie }} | <b>Ra√ßa:</b> {{ pet.raca }}</p>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-info">Nenhum resultado encontrado para "{{ termo }}".</div>
            {% endfor %}
        </div>
    {% endif %}
</div>

<!-- üìä Dashboard antigo -->
<div class="container">
    <h1 class="text-primary mb-4 text-center">Painel de Controle Clinica Veterinaria</h1>
    <div class="rows">
        <div class="row">
            <div class="col-6 col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-header text-bg-primary"><h6>Total de Animais</h6></div>
                    <div class="card-body text-center pt-2">
                        <h3>{{ total_pets }}</h3>
                        <small>Animais registrados</small>
                        <div class="icon-circle bg-dark"><i class="fas fa-paw"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-header text-bg-success"><h6>Total de Respons√°veis</h6></div>
                    <div class="card-body text-center pt-2">
                        <h3>{{ totaldono }}</h3>
                        <small>Clientes cadastrados</small>
                        <div class="icon-circle bg-dark"><i class="fas fa-users"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-header text-bg-danger"><h6>D√©bitos / Clientes</h6></div>
                    <div class="card-body text-center pt-2">
                        <h3>R$ {{ debitos_cliente|number_format(2, ',', '.') }}</h3>
                        <small>Total em aberto</small>
                        <div class="icon-circle bg-dark"><i class="fas fa-hand-holding-usd"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card bg-warning text-dark">
                    <div class="card-header text-bg-warning"><h6>M√©dia de Atendimento</h6></div>
                    <div class="card-body text-center pt-2">
                        <h3>{{ media_atendimento }}</h3>
                        <small>Dura√ß√£o m√©dia</small>
                        <div class="icon-circle bg-dark text-white"><i class="fas fa-stopwatch"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid mt-4">
            
            <!-- COLUNA ESQUERDA -->
            <div class="col-lg-12">
                <div class="row gy-2">
                    <!-- √öltimos atendimentos (24h) -->
                    <div class="col-md-6 ">
                        <div class="card  border-0 rounded-3">
                            <div class="card-header">
                                <h5 class="card-title">
                                <i class="fas fa-stethoscope me-2 text-primary"></i>√öltimos atendimentos (24h)</h5>
                            </div>
                            <div class="card-body card-body-fixo">
                                
                                <div class="card-listagem-scroll">
                                    <div class="row g-0">
                                        <ul class="list-group list-group-flush">
                                            {% for item in atendimentos %}
                                                {# acessos seguros #}
                                                {% set petId       = attribute(item, 'pet_id')|default(attribute(item, 'id')) %}
                                                {% set petNome     = attribute(item, 'nome_pet')|default(attribute(item, 'pet')|default('Pet')) %}
                                                {% set clienteNome = attribute(item, 'nome_cliente')|default(attribute(item, 'cliente')|default('')) %}
                                                {% set dataAt      = attribute(item, 'data_inicio')|default(attribute(item, 'data')) %}
                                                <li class="list-group-item fs-6">
                                                    <a href="{{ path('clinica_detalhes_pet', {'id': petId}) }}" class="fw-bold text-info consulta">{{ petNome }}</a>
                                                    <small class="ms-1 text-black">{{ clienteNome }}</small>
                                                    <div class="badge text-bg-primary">{{ dataAt|date('d/m H:i') }}</div>
                                                </li>
                                            {% else %}
                                                <div class="col-12">
                                                    <div class="card p-3 card-flutuante bg-light">Nenhum atendimento recente.</div>
                                                </div>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- √öltimos animais cadastrados -->
                    <div class="col-md-6">
                        <div class="card  border-0 rounded-3">
                            <div class="card-header">
                                <h5 class="card-title mb-2">
                                <i class="fas fa-paw me-2 text-success"></i>√öltimos animais cadastrados
                                </h5>
                            </div>
                            <div class="card-body card-body-fixo">
                                
                                <div class="card-listagem-scroll">
                                    <div class="row g-0">
                                        <ul class="list-group list-group-flush">
                                            {% for animal in animais_cadastrados %}
                                                <li class="list-group-item fs-6">
                                                    <div class="card card-flutuante mb-1 card-listagem-item bg-white">
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <div>
                                                                <a href="{{ path('clinica_detalhes_pet', {'id': animal.id}) }}" class="fw-bold text-info consulta">{{ animal.nome }}</a>
                                                                <span class="ms-1 text-black">{{ animal.tutor }}</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </li>
                                            {% else %}
                                                <li class="list-group-item fs-6">
                                                    <div class="card p-3 card-flutuante bg-light">
                                                        Nenhum animal cadastrado.
                                                    </div>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Animais internados -->
                    <div class="col-md-6">
                        <div class="card  border-0 rounded-3">
                            <div class="card-body">
                                <h5 class="card-title mb-2">
                                <i class="fas fa-procedures me-2 text-danger"></i>Animais internados
                                </h5>
                                <div class="card-listagem-scroll">
                                    <div class="row g-0">
                                        <ul class="list-group list-group-flush">
                                            {% for internacao in internados %}
                                                {% set petId   = attribute(internacao, 'pet_id')|default(attribute(internacao, 'id')) %}
                                                {% set petNome = attribute(internacao, 'pet_nome')|default(attribute(internacao, 'nome_pet')|default('Pet')) %}
                                                {% set dono    = attribute(internacao, 'dono_nome')|default('') %}
                                                {% set motivo  = attribute(internacao, 'motivo')|default('') %}
                                                <li class="list-group-item fs-6">
                                                    <div class="card card-flutuante mb-1 card-listagem-item bg-white">
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <div>
                                                                {% if petId is defined and petId is not null and petId > 0 %}
                                                                    <a href="{{ path('clinica_detalhes_pet', {'id': petId}) }}" class="fw-bold text-info consulta">{{ petNome }}</a>
                                                                {% else %}
                                                                    <span class="fw-bold text-info">{{ petNome }}</span>
                                                                {% endif %}

                                                                <span class="ms-1 text-black">{{ dono }}</span>
                                                            </div>
                                                            <span class="text-black">
                                                                {{ 'Emergencia' in motivo ? 'Emerg√™ncia' : 'Pouco urgente' }}
                                                            </span>
                                                        </div>
                                                    </div>
                                                </li>
                                            {% else %}
                                                <li class="list-group-item fs-6">
                                                    Nenhuma interna√ß√£o ativa.
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Vacinas -->
                    <div class="col-md-6">
                        <div class="card  border-0 rounded-3">
                            <div class="card-body">
                                <h5 class="card-title mb-2">
                                <i class="fas fa-syringe me-2 text-warning"></i>Vacinas
                                </h5>
                                <nav class="vaccine-tabs nav nav-pills flex-row mb-2">
                                    <a href="#tab-vencidas" class="nav-link active small" data-bs-toggle="tab">Vencidas</a>
                                    <a href="#tab-programadas" class="nav-link small" data-bs-toggle="tab">Programadas</a>
                                </nav>
                                <div class="tab-content card-listagem-scroll">
                                    <div class="tab-pane fade show active" id="tab-vencidas">
                                        <div class="row g-0">
                                            <ul class="list-group list-group-flush">
                                                {# vencidas #}
                                                {% for vacina in vacinas_vencidas %}
                                                    {% set petId   = attribute(vacina, 'pet_id')|default(attribute(vacina, 'id')) %}
                                                    {% set petNome = attribute(vacina, 'pet_nome')|default(attribute(vacina, 'nome_pet')|default('Pet')) %}
                                                    {% set tipo    = attribute(vacina, 'tipo')|default('') %}
                                                    {% set dtVal   = attribute(vacina, 'data_validade')|default(null) %}
                                                    <li class="list-group-item fs-6">
                                                        <div class="card card-flutuante mb-1 card-listagem-item bg-white">
                                                            <div class="d-flex justify-content-between align-items-center">
                                                                <div>
                                                                    {% if petId is not null %}
                                                                        <a href="{{ path('clinica_detalhes_pet', {'id': petId}) }}" class="fw-bold text-info consulta">{{ petNome }}</a>
                                                                    {% else %}
                                                                        <span class="fw-bold text-info">{{ petNome }}</span>
                                                                    {% endif %}
                                                                    <span class="ms-1 text-black">- {{ tipo }}</span>
                                                                </div>
                                                                <small class="fw-bold text-black">{{ dtVal ? dtVal|date('d/m/Y') : '' }}</small>
                                                            </div>
                                                        </div>
                                                    </li>
                                                {% else %}
                                                    <div class="col-12">Nenhuma vacina vencida.</div>
                                                {% endfor %}
                                                {# programadas #}
                                                {% for vacina in vacinas_programadas %}
                                                    {% set petId   = attribute(vacina, 'pet_id')|default(attribute(vacina, 'id')) %}
                                                    {% set petNome = attribute(vacina, 'pet_nome')|default(attribute(vacina, 'nome_pet')|default('Pet')) %}
                                                    {% set tipo    = attribute(vacina, 'tipo')|default('') %}
                                                    {% set dtVal   = attribute(vacina, 'data_validade')|default(null) %}
                                                    <li class="list-group-item fs-6">
                                                        <div class="card card-flutuante mb-1 card-listagem-item bg-white">
                                                            <div class="d-flex justify-content-between align-items-center">
                                                                <div>
                                                                    {% if petId is not null %}
                                                                        <a href="{{ path('clinica_detalhes_pet', {'id': petId}) }}" class="fw-bold text-info consulta">{{ petNome }}</a>
                                                                    {% else %}
                                                                        <span class="fw-bold text-info">{{ petNome }}</span>
                                                                    {% endif %}
                                                                    <span class="ms-1 text-black">- {{ tipo }}</span>
                                                                </div>
                                                                <small class="text-black">{{ dtVal ? dtVal|date('d/m/Y') : '' }}</small>
                                                            </div>
                                                        </div>
                                                    </li>
                                                {% else %}
                                                    <div class="col-12">Nenhuma vacina programada.</div>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- COLUNA DIREITA (n√£o muda) -->
            
        </div>
</div>

{% endblock %}

{% block javascripts %}

<script>
$(function(){
    var largura = screen.width;
    var altura = screen.height;
    $('.consulta').on('click', function(){
        var pagina = $(this).attr('href');
        window.open(pagina, "", "location=center,toolbar=no,scrollbars=yes,status=no,dialog=yes,resizable=no,minimaze=no,fullscreen=no,width="+largura+",height="+altura+",top=100,left=200");
        return false;
    })
});
</script>
{% endblock %}
