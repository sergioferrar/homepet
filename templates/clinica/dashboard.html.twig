.card-listagem-scroll { max-height: 416px; overflow-y: auto; }
.card-body-fixo { height: 500px; overflow-y: 500px; }
</style>
{% endblock %}

{% block body %}

<!-- üîç Pesquisa -->
<div class="container-fluid mt-5">
    <h3 class="text-primary mb-4">Pesquisar Pet ou Tutor</h3>
    <form method="get" action="{{ path('clinica_dashboard') }}" class="row mb-3">
        <div class="col-10">
            <input type="text" name="q" value="{{ termo }}" class="form-control form-control-md"
                   placeholder="üîç Pesquisar por nome ou tutor..." />
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-primary w-100">Buscar</button>
        </div>
    </form>

    {% if termo %}
        <div class="row gy-3">
            {% for pet in pets %}
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5>
                                <a href="{{ path('clinica_detalhes_pet', {'id': pet.id}) }}" class="text-primary">
                                    {{ pet.nome }}
                                </a>
                            </h5>
                            <p class="mb-1"><i class="bx bx-user"></i> {{ pet.dono_nome }}</p>
                            <p class="mb-0"><i class="bx bx-shape-circle"></i> {{ pet.especie }} | <b>Ra√ßa:</b> {{ pet.raca }}</p>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-info">Nenhum resultado encontrado para "{{ termo }}".</div>
            {% endfor %}
        </div>
    {% endif %}
</div>

    <!-- üìå Bot√£o para abrir Prescri√ß√µes M√©dicas -->
