    formData.append('anotacoes', 'Confirmado via calend√°rio geral');
    
    console.log('üîÑ Confirmando medicamento...', {eventoId, internacaoId});
    
    fetch(`/homepet/public/clinica/internacao/${internacaoId}/evento/${eventoId}/executar`, {
