{% extends 'base.html.twig' %}

{% block body %}
        <div class="row justify-content-center mb-4">
            <div class="col-md-10 col-lg-8">
                <div class="card shadow-lg welcome-box text-center px-4 py-3 border-0">
                    <div class="mb-2 d-flex justify-content-center gap-2">
                        <i class="fa-solid fa-dog fa-lg text-primary"></i>
                        <i class="fa-solid fa-dog fa-lg text-warning"></i>
                        <i class="fa-solid fa-dog fa-lg text-info"></i>
                    </div>
                    <h2 class="mb-2 fw-semibold fs-4">Bem-vindo ao <span class="text-primary">System Pet</span></h2>
                    <p class="text-muted mb-0 small">Sistema de gerenciamento de agendamentos, clientes, pets e serviços.</p>
                </div>
            </div>
        </div>

        <div class="row g-4 justify-content-center">
            <div class="col-md-6 col-lg-3">
                <a href="{{ path('agendamento_novo') }}" class="text-decoration-none">
                    <div class="card text-white bg-primary card-menu shadow text-center h-100">
                        <div class="card-body py-3 d-flex flex-column justify-content-center align-items-center">
                            <i class="fa-solid fa-calendar-plus fa-xl mb-2"></i>
                            <h6 class="mb-0">Novo Agendamento</h6>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-6 col-lg-3">
                <a href="{{ path('cliente_novo') }}" class="text-decoration-none">
                    <div class="card text-white bg-success card-menu shadow text-center h-100">
                        <div class="card-body py-3 d-flex flex-column justify-content-center align-items-center">
                            <i class="fa-solid fa-user-plus fa-xl mb-2"></i>
                            <h6 class="mb-0">Cadastro de Cliente</h6>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-6 col-lg-3">
                <a href="{{ path('pet_novo') }}" class="text-decoration-none">
                    <div class="card text-white bg-warning card-menu shadow text-center h-100">
                        <div class="card-body py-3 d-flex flex-column justify-content-center align-items-center">
                            <i class="fa-solid fa-dog fa-xl mb-2" style="color: black;"></i>
                            <h6 class="mb-0 text-dark">Cadastro de Pet</h6>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-6 col-lg-3">
                <a href="{{ path('servico_novo') }}" class="text-decoration-none">
                    <div class="card text-white bg-info card-menu shadow text-center h-100">
                        <div class="card-body py-3 d-flex flex-column justify-content-center align-items-center">
                            <i class="fa-solid fa-scissors fa-xl mb-2"></i>
                            <h6 class="mb-0">Cadastro de Serviço</h6>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <br>




    <section class="section dashboard">
        <div class="row">

            <!-- Left side columns -->
            <div class="col-lg-12">
                <div class="row">

                    <!-- Sales Card -->
                    <div class="col-xxl-3 col-md-6">
                        <div class="card info-card sales-card">



                            <div class="card-body">
                                <h5 class="card-title">Agendamento <span>| Mês</span></h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-calendar3"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6>{{ agendamento }}</h6>
                                        <span class="text-success small pt-1 fw-bold d-none">0%</span> <span class="text-muted small pt-2 ps-1">increase</span>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div><!-- End Sales Card -->

                    <!-- Revenue Card -->
                    <div class="col-xxl-3 col-md-6">
                        <div class="card info-card revenue-card">



                            <div class="card-body">
                                <h5 class="card-title">Agendamentos <span>| Hoje</span></h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-calendar3"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6>{{ agendamentoHoje }}</h6>
                                        <span class="text-success small pt-1 fw-bold d-none">8%</span> <span class="text-muted small pt-2 ps-1">increase</span>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div><!-- End Revenue Card -->

                    <!-- Customers Card -->
                    <div class="col-xxl-3 col-xl-12">

                        <div class="card info-card customers-card">


                            <div class="card-body">
                                <h5 class="card-title">Receita</h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-currency-dollar"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6>R$ {{ lucrototal }}</h6>
                                        <span class="text-danger small pt-1 fw-bold d-none">6%</span>
                                        <span class="text-muted small pt-2 ps-1 d-none">decrease</span>

                                    </div>
                                </div>

                            </div>
                        </div>

                    </div><!-- End Customers Card -->
                    <div class="col-xxl-3 col-xl-12">

                        <div class="card info-card customers-card">



                            <div class="card-body">
                                <h5 class="card-title">Pets Cadastrados</h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-journal-bookmark"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6>{{ animais }}</h6>
                                        <span class="text-danger small pt-1 fw-bold d-none">12%</span>
                                        <span class="text-muted small pt-2 ps-1 d-none">decrease</span>

                                    </div>
                                </div>

                            </div>
                        </div>

                    </div><!-- End Customers Card -->

                    <!-- Reports -->

                    <!-- Recent Sales -->

                    <!-- Top Selling -->

                </div>
            </div><!-- End Left side columns -->

            <!-- Right side columns -->
            <!-- Reports -->
            <div class="col-12">
                <div class="card">


                    <div class="card-body">
                        <h5 class="card-title">Receita <span>/Diária</span></h5>

                        <!-- Line Chart -->
                        <div id="reportsChart"></div>

                        <script>
                            document.addEventListener("DOMContentLoaded", () => {
                                new ApexCharts(document.querySelector("#reportsChart"), {
                                    series: [{
                                        name: 'Sales',
                                        data: {{ valores|raw }},
                                    },],
                                    chart: {
                                        height: 350,
                                        type: 'area',
                                        toolbar: {
                                            show: false
                                        },
                                    },
                                    markers: {
                                        size: 4
                                    },
                                    colors: ['#4154f1'],
                                    fill: {
                                        type: "gradient",
                                        gradient: {
                                            shadeIntensity: 1,
                                            opacityFrom: 0.3,
                                            opacityTo: 0.4,
                                            stops: [0, 90, 100]
                                        }
                                    },
                                    dataLabels: {
                                        enabled: false
                                    },
                                    stroke: {
                                        curve: 'smooth',
                                        width: 2
                                    },
                                    xaxis: {
                                        type: 'datetime',
                                        categories: {{ datas|raw }}
                                    },
                                    tooltip: {
                                        x: {
                                            format: 'dd/MM/yy HH:mm'
                                        },
                                    }
                                }).render();
                            });
                        </script>
                        <!-- End Line Chart -->

                    </div>

                </div>
            </div><!-- End Reports -->
        </div>
    </section>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

{% endblock %}
