<script>
    document.getElementById("btnChatIA").addEventListener("click", () => {
        new bootstrap.Modal(document.getElementById('chatIaModal')).show();
    });

    document.getElementById("btnEnviarIa").addEventListener("click", async () => {
        const comando = document.getElementById("inputPerguntaIa").value.trim();
        if (!comando) return;

        const box = document.getElementById("chatBoxIa");
        box.innerHTML += `<div class="mb-2"><strong>Voc√™:</strong> ${comando}</div>`;
        
        // Mostrar loading
        box.innerHTML += `<div class="mb-2 text-muted" id="loading"><em>ü§ñ Processando...</em></div>`;
        box.scrollTop = box.scrollHeight;

        try {
            const response = await fetch("{{ path('ia_assistente_executar') }}", {
                method: "POST",
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ comando })
            });

            if (!response.ok) {
                const errorText = await response.text();
                console.error('Erro HTTP:', response.status, errorText);
                throw new Error(`Erro ${response.status}: ${errorText.substring(0, 100)}`);
            }

            const data = await response.json();
            
            // Remove loading
            document.getElementById('loading')?.remove();
            
            if (data.success) {
                box.innerHTML += `<div class="mb-2 alert alert-success p-2">
                    <strong>ü§ñ Assistente:</strong> ${data.message}
                    ${data.acao ? `<br><small class="text-muted">A√ß√£o: ${data.acao}</small>` : ''}
                </div>`;
            } else {
                box.innerHTML += `<div class="mb-2 alert alert-warning p-2">
                    <strong>ü§ñ Assistente:</strong> ${data.message}
                </div>`;
            }
            
            box.scrollTop = box.scrollHeight;
        } catch (e) {
            document.getElementById('loading')?.remove();
            console.error('Erro capturado:', e);
            box.innerHTML += `<div class="mb-2 alert alert-danger p-2">
                <strong>Erro:</strong> ${e.message || 'N√£o foi poss√≠vel processar o comando.'}
            </div>`;
        }

        document.getElementById("inputPerguntaIa").value = '';
    });

    // üîî SISTEMA DE NOTIFICA√á√ïES - Medicamentos pendentes
    async function carregarNotificacoes() {
        try {
            const response = await fetch('/homepet/public/clinica/notificacoes');
            const data = await response.json();
            
            const notificationList = document.getElementById('notificationList');
            const notificationCount = document.getElementById('notificationCount');
            const notificationHeader = document.getElementById('notificationHeader');
            
            if (data.notificacoes && data.notificacoes.length > 0) {
                notificationCount.textContent = data.notificacoes.length;
                notificationCount.style.display = 'inline';
                notificationHeader.textContent = `Voc√™ tem ${data.notificacoes.length} notifica√ß√£o(√µes)`;
                
                notificationList.innerHTML = data.notificacoes.map(n => `
                    <li class="notification-item">
                        <i class="bi ${n.icon} ${n.color}"></i>
                        <div>
                            <h4>${n.titulo}</h4>
                            <p>${n.mensagem}</p>
                            <p>${n.tempo}</p>
                        </div>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                `).join('');
            } else {
                notificationCount.style.display = 'none';
                notificationHeader.textContent = 'Nenhuma notifica√ß√£o';
                notificationList.innerHTML = `
                    <li class="notification-item text-center text-muted py-3">
                        <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
                        <p class="mt-2">Tudo em dia! üéâ</p>
                    </li>
                `;
            }
        } catch (error) {
            console.error('Erro ao carregar notifica√ß√µes:', error);
        }
    }
    
    // Carrega notifica√ß√µes ao abrir a p√°gina
    carregarNotificacoes();
    
    // Atualiza notifica√ß√µes a cada 2 minutos
    setInterval(carregarNotificacoes, 120000);

    // üîç SISTEMA DE BUSCA
    const searchInput = document.getElementById('searchInput');
    const searchResults = document.getElementById('searchResults');
    const searchForm = document.getElementById('searchForm');
    
    let searchTimeout;
    
    searchInput.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        const query = this.value.trim();
        
        if (query.length < 2) {
            searchResults.style.display = 'none';
            return;
        }
        
        searchTimeout = setTimeout(async () => {
            try {
                const response = await fetch(`/homepet/public/clinica/buscar?q=${encodeURIComponent(query)}`);
                const data = await response.json();
                
                if (data.resultados && data.resultados.length > 0) {
                    searchResults.innerHTML = data.resultados.map(r => `
                        <a href="${r.url}" class="search-result-item">
                            <i class="bi ${r.icon} me-2"></i>
                            <div>
                                <strong>${r.nome}</strong>
                                <small class="text-muted d-block">${r.tipo}</small>
                            </div>
                        </a>
                    `).join('');
                    searchResults.style.display = 'block';
                } else {
                    searchResults.innerHTML = '<div class="search-result-item text-muted">Nenhum resultado encontrado</div>';
                    searchResults.style.display = 'block';
                }
            } catch (error) {
                console.error('Erro na busca:', error);
            }
        }, 300);
    });
    
    // Fecha resultados ao clicar fora
    document.addEventListener('click', function(e) {
        if (!searchInput.contains(e.target) && !searchResults.contains(e.target)) {
            searchResults.style.display = 'none';
        }
    });
    
    // Previne submit do form
    searchForm.addEventListener('submit', function(e) {
        e.preventDefault();
    });
</script>

