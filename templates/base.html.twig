<!-- Custom JS for Sidebar Toggle -->
<script>
    $(document).ready(function() {
        // Estado inicial: sidebar colapsada em mobile, aberta em desktop
        if ($(window).width() < 992) {
            $('.sidebar').addClass('collapsed');
            $('.header').addClass('collapsed');
            $('.main').addClass('collapsed');
        }

        // Toggle sidebar em qualquer resolução
        $('.sidebar-toggle').on('click', function() {
            $('.sidebar').toggleClass('collapsed active');
            $('.header').toggleClass('collapsed');
            $('.main').toggleClass('collapsed');
        });

        // Toggle search bar em mobile
        $('.search-bar-toggle').on('click', function(e) {
            e.preventDefault();
            $('.search-bar').toggleClass('active');
        });

        // Fechar sidebar ao clicar fora dela em mobile
        $(document).on('click', function(e) {
            if ($(window).width() < 992 && !$('.sidebar').hasClass('collapsed') && !$(e.target).closest('.sidebar, .sidebar-toggle').length) {
                $('.sidebar').addClass('collapsed').removeClass('active');
                $('.header').addClass('collapsed');
                $('.main').addClass('collapsed');
            }
        });

        // Ajustar layout ao redimensionar
        $(window).on('resize', function() {
            if ($(window).width() < 992 && !$('.sidebar').hasClass('collapsed')) {
                $('.sidebar').addClass('collapsed').removeClass('active');
                $('.header').addClass('collapsed');
                $('.main').addClass('collapsed');
            } else if ($(window).width() >= 992 && $('.sidebar').hasClass('collapsed') && !$('.sidebar').hasClass('active')) {
                $('.sidebar').removeClass('collapsed');
                $('.header').removeClass('collapsed');
                $('.main').removeClass('collapsed');
            }
        });
    });
</script>

