{% extends 'base.html.twig' %}

{% block body %}
<div class="pagetitle">
    <h1 class="text-center shadow-sm rounded p-2">✏️ Editar Hospedagem</h1>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form method="POST" action="{{ path('hospedagem_editar', { id: hospedagem.id }) }}">

{#             <div class="mb-3">
                <label class="form-label">Cliente:</label>
                <select name="cliente_id" class="form-select" required>
                    <option value="">Selecione um cliente</option>
                    {% for cliente in clientes %}
                        <option value="{{ cliente.id }}" {% if cliente.id == hospedagem.cliente_id %}selected{% endif %}>{{ cliente.nome }}</option>
                    {% endfor %}
                </select>
            </div> #}

            <div class="mb-3">
                <label class="form-label">Pet:</label>
                <select name="pet_id" class="form-select" required>
                    <option value="">Selecione um pet</option>
                    {% for pet in pets %}
                        <option value="{{ pet.id }}" {% if pet.id == hospedagem.pet_id %}selected{% endif %}>{{ pet.nome }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Data Entrada:</label>
                <input type="date" name="dataEntrada" class="form-control" value="{{ hospedagem.data_entrada|date('Y-m-d') }}" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Data Saída:</label>
                <input type="date" name="dataSaida" class="form-control" value="{{ hospedagem.data_saida|date('Y-m-d') }}" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Valor por dia (R$):</label>
                <input type="number" name="valor" class="form-control" value="{{ (hospedagem.valor / ((hospedagem.data_saida|date('U') - hospedagem.data_entrada|date('U')) / 86400 + 1))|number_format(2, '.', '') }}" step="0.01" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Observações:</label>
                <textarea name="observacoes" class="form-control">{{ hospedagem.observacoes }}</textarea>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Salvar Alterações</button>
                <a href="{{ path('hospedagem_listar') }}" class="btn btn-secondary ms-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
