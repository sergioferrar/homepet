{% extends 'base.html.twig' %}

{% block title %}Orçamento #{{ orcamento.id }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-invoice-dollar"></i> Orçamento #{{ orcamento.id }}</h2>
        <div>
            <button onclick="window.print()" class="btn btn-secondary">
                <i class="fas fa-print"></i> Imprimir
            </button>
            <a href="{{ path('orcamento_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Informações do Orçamento</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Cliente:</strong> {{ orcamento.clienteNome }}</p>
                            <p><strong>Pet:</strong> {{ orcamento.petNome ?? 'Não informado' }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Data de Criação:</strong> {{ orcamento.dataCriacao|date('d/m/Y H:i') }}</p>
                            <p><strong>Validade:</strong> 
                                {% if orcamento.dataValidade %}
                                    {{ orcamento.dataValidade|date('d/m/Y') }}
                                {% else %}
                                    Não definida
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    {% if orcamento.observacoes %}
                    <div class="mt-3">
                        <p><strong>Observações:</strong></p>
                        <p>{{ orcamento.observacoes }}</p>
                    </div>
                    {% endif %}
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Itens do Orçamento</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Descrição</th>
                                    <th>Tipo</th>
                                    <th>Quantidade</th>
                                    <th>Valor Unitário</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in itens %}
                                <tr>
                                    <td>{{ item.descricao }}</td>
                                    <td>{{ item.tipo }}</td>
                                    <td>{{ item.quantidade }}</td>
                                    <td>R$ {{ item.valorUnitario|number_format(2, ',', '.') }}</td>
                                    <td>R$ {{ item.subtotal|number_format(2, ',', '.') }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Status</h5>
                </div>
                <div class="card-body text-center">
                    <h3>
                        {% if orcamento.status == 'pendente' %}
                            <span class="badge bg-warning">Pendente</span>
                        {% elseif orcamento.status == 'aprovado' %}
                            <span class="badge bg-success">Aprovado</span>
                        {% elseif orcamento.status == 'recusado' %}
                            <span class="badge bg-danger">Recusado</span>
                        {% elseif orcamento.status == 'convertido' %}
                            <span class="badge bg-info">Convertido</span>
                        {% endif %}
                    </h3>
                    
                    {% if orcamento.status == 'pendente' %}
                    <div class="mt-3">
                        <button class="btn btn-success w-100 mb-2" onclick="alterarStatus('aprovado')">
                            <i class="fas fa-check"></i> Aprovar
                        </button>
                        <button class="btn btn-danger w-100" onclick="alterarStatus('recusado')">
                            <i class="fas fa-times"></i> Recusar
                        </button>
                    </div>
                    {% endif %}
                    
                    {% if orcamento.status == 'aprovado' %}
                    <div class="mt-3">
                        <button class="btn btn-primary w-100" onclick="converterVenda()">
                            <i class="fas fa-shopping-cart"></i> Converter em Venda
                        </button>
                    </div>
                    {% endif %}
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Valores</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Valor Total:</span>
                        <strong>R$ {{ orcamento.valorTotal|number_format(2, ',', '.') }}</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Desconto:</span>
                        <strong class="text-danger">- R$ {{ orcamento.desconto|number_format(2, ',', '.') }}</strong>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span><strong>Valor Final:</strong></span>
                        <h4 class="text-success mb-0">R$ {{ orcamento.valorFinal|number_format(2, ',', '.') }}</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function alterarStatus(novoStatus) {
    if (!confirm(`Deseja realmente ${novoStatus === 'aprovado' ? 'aprovar' : 'recusar'} este orçamento?`)) {
        return;
    }
    
    const formData = new FormData();
    formData.append('status', novoStatus);
    
    fetch('{{ path('orcamento_status', {id: orcamento.id}) }}', {
        method: 'POST',
        body: formData
    })
    .then(r => r.json())
    .then(result => {
        if (result.success) {
            alert(result.message);
            location.reload();
        } else {
            alert(result.message);
        }
    })
    .catch(err => {
        alert('Erro ao alterar status');
        console.error(err);
    });
}

function converterVenda() {
    if (!confirm('Deseja converter este orçamento em venda?')) {
        return;
    }
    
    fetch('{{ path('orcamento_converter', {id: orcamento.id}) }}', {
        method: 'POST'
    })
    .then(r => r.json())
    .then(result => {
        if (result.success) {
            alert(result.message);
            location.reload();
        } else {
            alert(result.message);
        }
    })
    .catch(err => {
        alert('Erro ao converter orçamento');
        console.error(err);
    });
}
</script>

<style>
@media print {
    .btn, .card-header { display: none !important; }
}
</style>
{% endblock %}
