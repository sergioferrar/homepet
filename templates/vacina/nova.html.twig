{% extends 'base.html.twig' %}

{% block body %}
<div class="pagetitle mb-4">
    <h1 class="text-primary">💉 Nova Vacina</h1>
    <p class="text-muted">Registre uma nova aplicação de vacina para um pet.</p>
</div>

<section class="section">
    <div class="card shadow border-0">
        <div class="card-header bg-light">
            <strong>Formulário de Cadastro</strong>
        </div>
        <div class="card-body">
            <form action="{{ path('vacina_nova') }}" method="POST">
                <div class="mb-3">
                    <label for="pet_id" class="form-label">🐶 Pet</label>
                    <select name="pet_id" id="pet_id" class="form-select" required>
                        <option value="" selected disabled>Selecione o pet</option>
                        {% for pet in pets %}
                            <option value="{{ pet.id }}">{{ pet.nome }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="mb-3">
                    <label for="tipo" class="form-label">📌 Tipo de Vacina</label>
                    <input type="text" class="form-control" id="tipo" name="tipo" list="tiposVacina" placeholder="Ex: Antirrábica" required>

                    <datalist id="tiposVacina">
                        {% for vacina in vacinasCao %}
                            <option value="{{ vacina }}">
                        {% endfor %}
                        {% for vacina in vacinasGato %}
                            <option value="{{ vacina }}">
                        {% endfor %}
                    </datalist>
                </div>


                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="data_aplicacao" class="form-label">📅 Data de Aplicação</label>
                        <input type="date" class="form-control" id="data_aplicacao" name="data_aplicacao" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="data_validade" class="form-label">📆 Validade</label>
                        <input type="date" class="form-control" id="data_validade" name="data_validade" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="lote" class="form-label">🔢 Lote</label>
                    <input type="text" class="form-control" id="lote" name="lote" required>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save me-1"></i>Salvar Vacina
                </button>
                <a href="{{ path('vacina_index') }}" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left-circle"></i> Voltar
                </a>
            </form>
        </div>
    </div>
</section>
{% endblock %}
