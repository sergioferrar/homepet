{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1>Editar Agendamento</h1>
    <form method="post" action="{{ path('agendamento_editar', {'id': agendamento.id}) }}">
        <div class="form-group">
            <label for="pet_id">Pet</label>
            <select class="form-control" id="pet_id" name="pet_id" required>
                {% for pet in pets %}
                    <option value="{{ pet.id }}" {% if pet.id == agendamento.pet_id %}selected{% endif %}>{{ pet.nome }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="servico_id">Serviço</label>
            <select class="form-control" id="servico_id" name="servico_id" required>
                {% for servico in servicos %}
                    <option value="{{ servico.id }}" {% if servico.id == agendamento.servico_id %}selected{% endif %}>{{ servico.nome }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="data">Data</label>
            <input type="date" class="form-control" id="data" name="data" value="{{ agendamento.data|date('Y-m-d') }}" required>
        </div>
        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="concluido" name="concluido" {% if agendamento.concluido %}checked{% endif %}>
            <label class="form-check-label" for="concluido"> Pagamento concluído</label>
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
</div>
{% endblock %}
