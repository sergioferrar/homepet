 $(document).ready(function () {
        let petIndex = 1; // Controla os índices dos pets
        
        // Adicionar novo pet
        $(".addpet").click(function () {
            let $lastCard = $(".pet-group").last();
            let $clone = $lastCard.clone(); // Clona a estrutura

            // Atualiza os índices do novo pet
            $clone.find("input, select").each(function () {
                let name = $(this).attr("name");
                if (name) {
                    let newName = name.replace(/\d+/, petIndex);
                    $(this).attr("name", newName);
                }
            });

            // Limpa valores dos campos clonados
            $clone.find("input[type='text'], input[type='hidden']").val("");
            $clone.find("select").val("");

            // Atualiza o ID do container de serviços
            $clone.find("#servicos-container-0").attr("id", `servicos-container-${petIndex}`);

            // Atualiza o botão de adicionar serviço
            $clone.find(".add-servico").attr("data-pet-index", petIndex);

            // Adiciona botão de remover pet
            $clone.find(".remover-item").html(`
                <button type="button" class="btn btn-danger remove-pet mt-2">
                    <i class="bx bx-trash"></i> Remover Pet
                </button>
            `);

            $(".pet-group").last().after($clone); // Adiciona o clone após o último
            petIndex++;
        });

        // Remover pet
        $(document).on("click", ".remove-pet", function () {
            $(this).closest(".pet-group").remove();
        });

        // Adicionar serviço dentro de um pet específico
        $(document).on("click", ".add-servico", function () {
            let petIndex = $(this).attr("data-pet-index");
            let $servicosContainer = $(`#servicos-container-${petIndex}`);
            let $newServico = $servicosContainer.find(".servico-item").first().clone();

            // Limpa o select do serviço
            $newServico.find("select").val("");

            $servicosContainer.append($newServico);
        });
    });

