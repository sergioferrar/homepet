{% extends 'base.html.twig' %}

{% block title %}Gerenciar Faturas - Super Admin{% endblock %}

{% block body %}
<div class="container-fluid py-4">

    <!-- Cabeçalho -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold">
                <i class="bi bi-receipt-cutoff text-success me-2"></i>
                Gerenciar Faturas
            </h2>
            <p class="text-muted mb-0">Visualize e gerencie todas as faturas do sistema</p>
        </div>
        <a href="{{ path('superadmin_dashboard') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Voltar ao Dashboard
        </a>
    </div>

    <!-- Cards de Resumo -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm text-white" style="background: linear-gradient(135deg, #0d6efd, #6610f2);">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-white-50 small fw-bold text-uppercase mb-1">Total</p>
                            <h3 class="mb-0 fw-bold">{{ invoices|length }}</h3>
                        </div>
                        <i class="bi bi-file-earmark-text fs-1 text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm text-white" style="background: linear-gradient(135deg, #198754, #20c997);">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-white-50 small fw-bold text-uppercase mb-1">Pagas</p>
                            {# CORREÇÃO: Fatura retorna objetos Doctrine aqui (getResult() no controller) #}
                            <h3 class="mb-0 fw-bold">{{ invoices|filter(i => i.status == 'pago')|length }}</h3>
                        </div>
                        <i class="bi bi-check-circle fs-1 text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm text-white" style="background: linear-gradient(135deg, #ffc107, #fd7e14);">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-white-50 small fw-bold text-uppercase mb-1">Pendentes</p>
                            <h3 class="mb-0 fw-bold">{{ invoices|filter(i => i.status == 'pendente')|length }}</h3>
                        </div>
                        <i class="bi bi-clock fs-1 text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm text-white" style="background: linear-gradient(135deg, #dc3545, #c0392b);">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-white-50 small fw-bold text-uppercase mb-1">Canceladas</p>
                            <h3 class="mb-0 fw-bold">{{ invoices|filter(i => i.status == 'cancelado')|length }}</h3>
                        </div>
                        <i class="bi bi-x-circle fs-1 text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body py-3">
            <div class="d-flex flex-wrap align-items-center gap-2">
                <span class="text-muted fw-bold small text-uppercase">Filtrar por status:</span>
                <a href="{{ path('superadmin_invoices', {status: 'todos'}) }}"
                   class="btn btn-sm {{ status_atual == 'todos' ? 'btn-primary' : 'btn-outline-primary' }}">
                    <i class="bi bi-list me-1"></i>Todos
                </a>
                <a href="{{ path('superadmin_invoices', {status: 'pago'}) }}"
                   class="btn btn-sm {{ status_atual == 'pago' ? 'btn-success' : 'btn-outline-success' }}">
                    <i class="bi bi-check-circle me-1"></i>Pagos
                </a>
                <a href="{{ path('superadmin_invoices', {status: 'pendente'}) }}"
                   class="btn btn-sm {{ status_atual == 'pendente' ? 'btn-warning' : 'btn-outline-warning' }}">
                    <i class="bi bi-clock me-1"></i>Pendentes
                </a>
                <a href="{{ path('superadmin_invoices', {status: 'cancelado'}) }}"
                   class="btn btn-sm {{ status_atual == 'cancelado' ? 'btn-danger' : 'btn-outline-danger' }}">
                    <i class="bi bi-x-circle me-1"></i>Cancelados
                </a>
            </div>
        </div>
    </div>

    <!-- Tabela -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold">
                <i class="bi bi-table me-2 text-success"></i>
                Lista de Faturas
                <span class="badge bg-success ms-2">{{ invoices|length }}</span>
            </h5>
        </div>
        <div class="card-body p-0">
            {% if invoices|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="px-4 py-3">Número</th>
                            <th>Estabelecimento</th>
                            <th>Emissão</th>
                            <th>Vencimento</th>
                            <th class="text-end">Valor</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for invoice in invoices %}
                        {#
                            CORREÇÃO: A entidade Fatura não tem @ORM\ManyToOne para Estabelecimento,
                            só tem o campo $estabelecimentoId (inteiro).
                            NÃO é possível acessar invoice.estabelecimento.razaoSocial — isso
                            lançaria "Undefined property" ou erro de relacionamento.
                            Solução: exibir o link pelo ID. Para ter o nome, o controller
                            precisaria fazer um JOIN ou lookup separado.
                        #}
                        {% set hoje = date('now') %}
                        {% set vencido = invoice.dataVencimento < hoje and invoice.status == 'pendente' %}

                        <tr class="{{ vencido ? 'table-warning' : '' }}">
                            <td class="px-4">
                                <span class="font-monospace fw-bold text-primary">
                                    {{ invoice.numeroInvoice ?? '#' ~ invoice.id }}
                                </span>
                            </td>
                            <td>
                                <a href="{{ path('superadmin_estabelecimento_detalhes', {id: invoice.estabelecimentoId}) }}"
                                   class="text-decoration-none fw-semibold">
                                    <i class="bi bi-shop me-1 text-muted"></i>
                                    Estab. #{{ invoice.estabelecimentoId }}
                                </a>
                            </td>
                            <td>
                                <small>
                                    <i class="bi bi-calendar me-1 text-muted"></i>
                                    {{ invoice.dataEmissao|date('d/m/Y') }}
                                </small>
                            </td>
                            <td>
                                <small class="{{ vencido ? 'text-danger fw-bold' : '' }}">
                                    <i class="bi bi-calendar-x me-1 text-muted"></i>
                                    {{ invoice.dataVencimento|date('d/m/Y') }}
                                    {% if vencido %}
                                        <span class="badge bg-danger ms-1">Vencido</span>
                                    {% endif %}
                                </small>
                            </td>
                            <td class="text-end">
                                <span class="fw-bold">R$ {{ invoice.valorLiquido|number_format(2, ',', '.') }}</span>
                            </td>
                            <td class="text-center">
                                {% if invoice.status == 'pago' %}
                                    <span class="badge bg-success px-3 py-2">
                                        <i class="bi bi-check-circle me-1"></i>Pago
                                    </span>
                                    {% if invoice.dataPagamento %}
                                        <br><small class="text-muted">{{ invoice.dataPagamento|date('d/m/Y') }}</small>
                                    {% endif %}
                                {% elseif invoice.status == 'pendente' %}
                                    <span class="badge bg-warning text-dark px-3 py-2">
                                        <i class="bi bi-clock me-1"></i>Pendente
                                    </span>
                                {% elseif invoice.status == 'cancelado' %}
                                    <span class="badge bg-danger px-3 py-2">
                                        <i class="bi bi-x-circle me-1"></i>Cancelado
                                    </span>
                                {% else %}
                                    <span class="badge bg-secondary px-3 py-2">{{ invoice.status }}</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('superadmin_estabelecimento_detalhes', {id: invoice.estabelecimentoId}) }}"
                                       class="btn btn-sm btn-outline-info"
                                       title="Ver estabelecimento">
                                        <i class="bi bi-building"></i>
                                    </a>
                                    {% if invoice.status == 'pendente' %}
                                    <button class="btn btn-sm btn-outline-success"
                                            onclick="marcarComoPago({{ invoice.id }})"
                                            title="Marcar como pago manualmente">
                                        <i class="bi bi-check-lg"></i>
                                    </button>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="text-center py-5">
                <i class="bi bi-receipt fs-1 text-muted mb-3 d-block"></i>
                <h5 class="text-muted">Nenhuma fatura encontrada</h5>
                <p class="text-muted">Nenhuma fatura corresponde ao filtro selecionado.</p>
            </div>
            {% endif %}
        </div>
    </div>

</div>

<script>
function marcarComoPago(invoiceId) {
    if (!confirm('Deseja marcar esta fatura como paga manualmente?\n\nO plano do estabelecimento será atualizado.')) return;

    const btn = event.target.closest('button');
    const originalHtml = btn.innerHTML;
    btn.disabled = true;
    btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';

    fetch(`/superadmin/invoice/${invoiceId}/marcar-pago`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
    })
    .then(r => r.json())
    .then(data => {
        if (data.success) {
            const toast = document.createElement('div');
            toast.className = 'alert alert-success position-fixed top-0 start-50 translate-middle-x mt-3 shadow';
            toast.style.zIndex = '9999';
            toast.innerHTML = `<i class="bi bi-check-circle me-2"></i>${data.message}`;
            document.body.appendChild(toast);
            setTimeout(() => location.reload(), 1200);
        } else {
            alert('Erro: ' + data.error);
            btn.disabled = false;
            btn.innerHTML = originalHtml;
        }
    })
    .catch(() => {
        alert('Erro ao processar a requisição.');
        btn.disabled = false;
        btn.innerHTML = originalHtml;
    });
}
</script>
{% endblock %}
