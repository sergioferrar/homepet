{% extends 'base.html.twig' %}

{% block title %}Gerenciar Estabelecimentos - Super Admin{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <!-- Cabeçalho com botão voltar -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">
                <i class="bi bi-shop text-primary me-2"></i>
                Gerenciar Estabelecimentos
            </h2>
            <p class="text-muted mb-0">Visualize e gerencie todos os estabelecimentos cadastrados</p>
        </div>
        <a href="{{ path('superadmin_dashboard') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Voltar ao Dashboard
        </a>
    </div>

    <!-- Filtros -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-2">
                <div class="col-12 col-md-auto">
                    <label class="form-label fw-bold text-muted small">FILTRAR POR:</label>
                </div>
                <div class="col-12 col-md">
                    <div class="btn-group w-100" role="group">
                        <a href="{{ path('superadmin_estabelecimentos', {filtro: 'todos'}) }}" 
                           class="btn btn-outline-primary {{ filtro_atual == 'todos' ? 'active' : '' }}">
                            <i class="bi bi-list me-1"></i>Todos
                        </a>
                        <a href="{{ path('superadmin_estabelecimentos', {filtro: 'ativos'}) }}" 
                           class="btn btn-outline-success {{ filtro_atual == 'ativos' ? 'active' : '' }}">
                            <i class="bi bi-check-circle me-1"></i>Ativos
                        </a>
                        <a href="{{ path('superadmin_estabelecimentos', {filtro: 'novos'}) }}" 
                           class="btn btn-outline-info {{ filtro_atual == 'novos' ? 'active' : '' }}">
                            <i class="bi bi-star me-1"></i>Novos (30 dias)
                        </a>
                        <a href="{{ path('superadmin_estabelecimentos', {filtro: 'proximos_vencer'}) }}" 
                           class="btn btn-outline-warning {{ filtro_atual == 'proximos_vencer' ? 'active' : '' }}">
                            <i class="bi bi-exclamation-triangle me-1"></i>A Vencer (15 dias)
                        </a>
                        <a href="{{ path('superadmin_estabelecimentos', {filtro: 'expirados'}) }}" 
                           class="btn btn-outline-danger {{ filtro_atual == 'expirados' ? 'active' : '' }}">
                            <i class="bi bi-x-circle me-1"></i>Expirados
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabela de Estabelecimentos -->
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-table me-2 text-primary"></i>
                    Lista de Estabelecimentos
                    <span class="badge bg-primary ms-2">{{ estabelecimentos|length }}</span>
                </h5>
            </div>
        </div>
        <div class="card-body p-0">
            {% if estabelecimentos|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="px-4 py-3">ID</th>
                            <th>Razão Social</th>
                            <th>CNPJ</th>
                            <th class="text-center">Status</th>
                            <th>Plano</th>
                            <th>Cadastro</th>
                            <th>Validade</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for est in estabelecimentos %}
                        {% set hoje = date() %}
                        {% set dias_expiracao = date(hoje).diff(est.dataPlanoFim).days %}
                        {% set expirado = est.dataPlanoFim < hoje %}
                        
                        <tr>
                            <td class="px-4 fw-bold text-primary">{{ est.id }}</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-initial rounded-circle bg-primary text-white me-2" 
                                         style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                        {{ est.razaoSocial|slice(0, 1)|upper }}
                                    </div>
                                    <div>
                                        <div class="fw-bold">{{ est.razaoSocial }}</div>
                                        <small class="text-muted">{{ est.cidade }}</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="font-monospace">{{ est.cnpj }}</span>
                            </td>
                            <td class="text-center">
                                {% if est.status == 'Ativo' %}
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>Ativo
                                    </span>
                                {% else %}
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-pause-circle me-1"></i>Inativo
                                    </span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-calendar-event text-primary me-2"></i>
                                    <span class="fw-bold">Plano Ativo</span>
                                </div>
                            </td>
                            <td>
                                <small class="text-muted">
                                    <i class="bi bi-calendar me-1"></i>
                                    {{ est.dataCadastro|date('d/m/Y') }}
                                </small>
                            </td>
                            <td>
                                {% if expirado %}
                                    <span class="badge bg-danger">
                                        <i class="bi bi-exclamation-circle me-1"></i>
                                        Expirado há {{ dias_expiracao }} dias
                                    </span>
                                {% elseif dias_expiracao <= 15 %}
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-clock me-1"></i>
                                        Vence em {{ dias_expiracao }} dias
                                    </span>
                                {% else %}
                                    <small class="text-success">
                                        <i class="bi bi-check me-1"></i>
                                        {{ est.dataPlanoFim|date('d/m/Y') }}
                                    </small>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('superadmin_estabelecimento_detalhes', {id: est.id}) }}" 
                                       class="btn btn-sm btn-outline-info" 
                                       data-bs-toggle="tooltip" 
                                       title="Ver detalhes completos">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('superadmin_acessar_estabelecimento', {id: est.id}) }}" 
                                       class="btn btn-sm btn-outline-primary" 
                                       data-bs-toggle="tooltip" 
                                       title="Acessar como este estabelecimento">
                                        <i class="bi bi-box-arrow-in-right"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="text-center py-5">
                <i class="bi bi-inbox bi-3x text-muted mb-3"></i>
                <h5 class="text-muted">Nenhum estabelecimento encontrado</h5>
                <p class="text-muted">Nenhum estabelecimento corresponde ao filtro selecionado.</p>
            </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
// Inicializar tooltips
document.addEventListener('DOMContentLoaded', function() {
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
});
</script>
{% endblock %}
