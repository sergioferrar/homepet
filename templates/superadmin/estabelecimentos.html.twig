{% extends 'base.html.twig' %}

{% block title %}Gerenciar Estabelecimentos - Super Admin{% endblock %}

{% block body %}
<div class="container-fluid py-4">

    <!-- Cabeçalho -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold">
                <i class="bi bi-shop text-primary me-2"></i>
                Gerenciar Estabelecimentos
            </h2>
            <p class="text-muted mb-0">Visualize e gerencie todos os estabelecimentos cadastrados</p>
        </div>
        <a href="{{ path('superadmin_dashboard') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Voltar ao Dashboard
        </a>
    </div>

    <!-- Filtros -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body py-3">
            <div class="row align-items-center g-2">
                <div class="col-auto">
                    <span class="text-muted fw-bold small text-uppercase">Filtrar:</span>
                </div>
                <div class="col">
                    <div class="d-flex flex-wrap gap-2">
                        <a href="{{ path('superadmin_estabelecimentos', {filtro: 'todos'}) }}"
                           class="btn btn-sm {{ filtro_atual == 'todos' ? 'btn-primary' : 'btn-outline-primary' }}">
                            <i class="bi bi-list me-1"></i>Todos
                        </a>
                        <a href="{{ path('superadmin_estabelecimentos', {filtro: 'ativos'}) }}"
                           class="btn btn-sm {{ filtro_atual == 'ativos' ? 'btn-success' : 'btn-outline-success' }}">
                            <i class="bi bi-check-circle me-1"></i>Ativos
                        </a>
                        <a href="{{ path('superadmin_estabelecimentos', {filtro: 'novos'}) }}"
                           class="btn btn-sm {{ filtro_atual == 'novos' ? 'btn-info text-white' : 'btn-outline-info' }}">
                            <i class="bi bi-star me-1"></i>Novos (30 dias)
                        </a>
                        <a href="{{ path('superadmin_estabelecimentos', {filtro: 'proximos_vencer'}) }}"
                           class="btn btn-sm {{ filtro_atual == 'proximos_vencer' ? 'btn-warning' : 'btn-outline-warning' }}">
                            <i class="bi bi-exclamation-triangle me-1"></i>A Vencer (15 dias)
                        </a>
                        <a href="{{ path('superadmin_estabelecimentos', {filtro: 'expirados'}) }}"
                           class="btn btn-sm {{ filtro_atual == 'expirados' ? 'btn-danger' : 'btn-outline-danger' }}">
                            <i class="bi bi-x-circle me-1"></i>Expirados
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabela -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">
                    <i class="bi bi-table me-2 text-primary"></i>
                    Lista de Estabelecimentos
                    <span class="badge bg-primary ms-2">{{ estabelecimentos|length }}</span>
                </h5>
            </div>
        </div>
        <div class="card-body p-0">
            {% if estabelecimentos|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="px-4 py-3">ID</th>
                            <th>Razão Social</th>
                            <th>CNPJ</th>
                            <th class="text-center">Status</th>
                            <th>Cadastro</th>
                            <th>Validade do Plano</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for est in estabelecimentos %}
                        {#
                            CORREÇÃO: Aqui o controller retorna objetos Doctrine (getResult()),
                            então est.dataPlanoFim já é um objeto DateTimeInterface.
                            O diff() funciona diretamente sem necessidade de conversão.
                        #}
                        {% set hoje = date('now') %}
                        {% set dataFim = est.dataPlanoFim %}
                        {% set expirado = dataFim < hoje %}
                        {% set diasDiff = hoje.diff(dataFim).days %}

                        <tr class="{{ expirado ? 'table-danger' : '' }}">
                            <td class="px-4 fw-bold text-primary">{{ est.id }}</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-primary text-white me-3 d-flex align-items-center justify-content-center fw-bold"
                                         style="width:38px;height:38px;font-size:1rem;flex-shrink:0;">
                                        {{ est.razaoSocial|slice(0,1)|upper }}
                                    </div>
                                    <div>
                                        <div class="fw-semibold">{{ est.razaoSocial }}</div>
                                        <small class="text-muted">{{ est.cidade }}</small>
                                    </div>
                                </div>
                            </td>
                            <td><span class="font-monospace small">{{ est.cnpj }}</span></td>
                            <td class="text-center">
                                {% if est.status == 'Ativo' %}
                                    <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Ativo</span>
                                {% else %}
                                    <span class="badge bg-secondary"><i class="bi bi-dash-circle me-1"></i>{{ est.status }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <small class="text-muted">
                                    <i class="bi bi-calendar me-1"></i>
                                    {{ est.dataCadastro|date('d/m/Y') }}
                                </small>
                            </td>
                            <td>
                                {% if expirado %}
                                    <span class="badge bg-danger">
                                        <i class="bi bi-exclamation-circle me-1"></i>Expirado há {{ diasDiff }} dia(s)
                                    </span>
                                {% elseif diasDiff <= 15 %}
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-clock me-1"></i>Vence em {{ diasDiff }} dia(s)
                                    </span>
                                {% else %}
                                    <span class="text-success small">
                                        <i class="bi bi-check me-1"></i>{{ dataFim|date('d/m/Y') }}
                                    </span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('superadmin_estabelecimento_detalhes', {id: est.id}) }}"
                                       class="btn btn-sm btn-outline-info"
                                       title="Ver detalhes">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('superadmin_acessar_estabelecimento', {id: est.id}) }}"
                                       class="btn btn-sm btn-outline-primary"
                                       title="Acessar como este estabelecimento">
                                        <i class="bi bi-box-arrow-in-right"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="text-center py-5">
                <i class="bi bi-inbox fs-1 text-muted mb-3 d-block"></i>
                <h5 class="text-muted">Nenhum estabelecimento encontrado</h5>
                <p class="text-muted">Nenhum estabelecimento corresponde ao filtro selecionado.</p>
            </div>
            {% endif %}
        </div>
    </div>

</div>
{% endblock %}
