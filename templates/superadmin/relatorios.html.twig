{% extends 'base.html.twig' %}

{% block title %}Relatórios Financeiros - Super Admin{% endblock %}

{% block body %}
<div class="container-fluid py-4">

    <!-- Cabeçalho -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold">
                <i class="bi bi-bar-chart-line text-info me-2"></i>
                Relatórios Financeiros
            </h2>
            <p class="text-muted mb-0">Análise de receita e desempenho do sistema</p>
        </div>
        <div class="d-flex gap-2">
            <a href="{{ path('superadmin_dashboard') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Voltar
            </a>
            <button class="btn btn-outline-primary" onclick="window.print()">
                <i class="bi bi-printer me-2"></i>Imprimir
            </button>
        </div>
    </div>

    <!-- Seletor de Ano -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body py-3">
            <div class="row align-items-center g-2">
                <div class="col-auto">
                    <label class="form-label fw-bold text-muted mb-0 text-uppercase small">Selecionar ano:</label>
                </div>
                <div class="col-md-2">
                    <select class="form-select" id="anoSelect" onchange="mudarAno()">
                        {% for ano in range(2024, date('now').format('Y')|number_format(0, '', '') + 1) %}
                            <option value="{{ ano }}" {{ ano == ano_selecionado ? 'selected' : '' }}>
                                {{ ano }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col">
                    <span class="badge bg-info fs-6 px-3 py-2">
                        <i class="bi bi-calendar-alt me-2"></i>Exibindo: {{ ano_selecionado }}
                    </span>
                </div>
            </div>
        </div>
    </div>

    {#
        CORREÇÃO: Twig não possui funções max()/min() nativas aplicáveis em arrays de objetos/maps.
        Calculamos total, max, min e média iterando com loop e variáveis auxiliares.
    #}
    {% set total_anual = 0 %}
    {% set receita_max = 0 %}
    {% set receita_min = null %}
    {% set mes_max = '' %}
    {% set mes_min = '' %}
    {% set meses_nomes = ['Janeiro','Fevereiro','Março','Abril','Maio','Junho','Julho','Agosto','Setembro','Outubro','Novembro','Dezembro'] %}

    {% for item in receita_por_mes %}
        {% set total_anual = total_anual + item.receita %}
        {% if item.receita > receita_max %}
            {% set receita_max = item.receita %}
            {% set mes_max = meses_nomes[item.mes - 1] %}
        {% endif %}
        {% if receita_min is null or item.receita < receita_min %}
            {% set receita_min = item.receita %}
            {% set mes_min = meses_nomes[item.mes - 1] %}
        {% endif %}
    {% endfor %}

    {% set receita_min = receita_min ?? 0 %}
    {% set media_mensal = total_anual / 12 %}

    <div class="row g-4">

        <!-- Gráfico -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-bar-chart me-2 text-info"></i>
                        Receita Mensal — {{ ano_selecionado }}
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="receitaMensalChart" height="90"></canvas>
                </div>
            </div>
        </div>

        <!-- Resumo lateral -->
        <div class="col-lg-4">
            <!-- Total Anual -->
            <div class="card border-0 shadow-sm mb-4 text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body">
                    <p class="text-white-50 small fw-bold text-uppercase mb-1">Receita Total {{ ano_selecionado }}</p>
                    <h2 class="fw-bold mb-1">R$ {{ total_anual|number_format(2, ',', '.') }}</h2>
                    <small class="text-white-50">Soma de todos os meses</small>
                </div>
            </div>

            <!-- Estatísticas -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0 fw-bold text-muted text-uppercase small">Estatísticas do Ano</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3 d-flex justify-content-between align-items-start">
                        <span class="text-muted">
                            <i class="bi bi-graph-up me-2 text-primary"></i>Média Mensal
                        </span>
                        <span class="fw-bold">R$ {{ media_mensal|number_format(2, ',', '.') }}</span>
                    </div>
                    <div class="mb-3 d-flex justify-content-between align-items-start">
                        <span class="text-muted">
                            <i class="bi bi-arrow-up me-2 text-success"></i>
                            Melhor Mês<br><small class="text-muted">{{ mes_max }}</small>
                        </span>
                        <span class="fw-bold text-success">R$ {{ receita_max|number_format(2, ',', '.') }}</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-start">
                        <span class="text-muted">
                            <i class="bi bi-arrow-down me-2 text-danger"></i>
                            Menor Mês<br><small class="text-muted">{{ mes_min }}</small>
                        </span>
                        <span class="fw-bold text-danger">R$ {{ receita_min|number_format(2, ',', '.') }}</span>
                    </div>
                </div>
            </div>

            <!-- Exportar -->
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-file-earmark-excel fs-1 text-success mb-2 d-block"></i>
                    <h6 class="mb-1">Exportar Relatório</h6>
                    <p class="text-muted small mb-3">Dados do ano {{ ano_selecionado }}</p>
                    <button class="btn btn-success btn-sm" onclick="alert('Funcionalidade em desenvolvimento')">
                        <i class="bi bi-download me-2"></i>Exportar Excel
                    </button>
                </div>
            </div>
        </div>

        <!-- Tabela Detalhada -->
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-table me-2 text-primary"></i>
                        Detalhamento Mensal — {{ ano_selecionado }}
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="px-4 py-3">Mês</th>
                                    <th class="text-end">Receita</th>
                                    <th class="text-center" style="width:120px;">% do Total</th>
                                    <th class="text-center" style="width:120px;">Variação</th>
                                    <th>Gráfico</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set receita_mes_anterior = 0 %}
                                {% for item in receita_por_mes %}
                                    {% set percentual = total_anual > 0 ? (item.receita / total_anual * 100) : 0 %}
                                    {% set variacao = receita_mes_anterior > 0 ? ((item.receita - receita_mes_anterior) / receita_mes_anterior * 100) : 0 %}

                                    <tr>
                                        <td class="px-4 fw-semibold">
                                            <i class="bi bi-calendar me-2 text-primary"></i>
                                            {{ meses_nomes[item.mes - 1] }}
                                        </td>
                                        <td class="text-end">
                                            <span class="fw-bold fs-6">R$ {{ item.receita|number_format(2, ',', '.') }}</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-primary">{{ percentual|number_format(1) }}%</span>
                                        </td>
                                        <td class="text-center">
                                            {% if loop.first %}
                                                <span class="text-muted">—</span>
                                            {% elseif variacao > 0 %}
                                                <span class="text-success fw-bold">
                                                    <i class="bi bi-arrow-up"></i>{{ variacao|number_format(1) }}%
                                                </span>
                                            {% elseif variacao < 0 %}
                                                <span class="text-danger fw-bold">
                                                    <i class="bi bi-arrow-down"></i>{{ (variacao * -1)|number_format(1) }}%
                                                </span>
                                            {% else %}
                                                <span class="text-muted"><i class="bi bi-dash"></i> 0%</span>
                                            {% endif %}
                                        </td>
                                        <td style="width:200px;">
                                            <div class="progress" style="height:10px;">
                                                <div class="progress-bar"
                                                     role="progressbar"
                                                     style="width:{{ percentual }}%;background:linear-gradient(90deg,#667eea,#764ba2);"
                                                     aria-valuenow="{{ percentual }}"
                                                     aria-valuemin="0"
                                                     aria-valuemax="100">
                                                </div>
                                            </div>
                                        </td>
                                    </tr>

                                    {# Atualiza mês anterior para próxima iteração #}
                                    {% set receita_mes_anterior = item.receita %}
                                {% endfor %}

                                <!-- Linha de total -->
                                <tr class="table-primary fw-bold border-top border-2">
                                    <td class="px-4">
                                        <i class="bi bi-calculator me-2"></i>TOTAL ANUAL
                                    </td>
                                    <td class="text-end fs-5">R$ {{ total_anual|number_format(2, ',', '.') }}</td>
                                    <td class="text-center">100%</td>
                                    <td class="text-center">—</td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Chart.js via CDN (versão 3 estável) -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
<script>
const meses = ['Jan','Fev','Mar','Abr','Mai','Jun','Jul','Ago','Set','Out','Nov','Dez'];
const receitas = [
    {% for item in receita_por_mes %}{{ item.receita }}{% if not loop.last %},{% endif %}{% endfor %}
];

const ctx = document.getElementById('receitaMensalChart').getContext('2d');
const gradient = ctx.createLinearGradient(0, 0, 0, 350);
gradient.addColorStop(0, 'rgba(102, 126, 234, 0.85)');
gradient.addColorStop(1, 'rgba(118, 75, 162, 0.2)');

new Chart(ctx, {
    type: 'bar',
    data: {
        labels: meses,
        datasets: [{
            label: 'Receita (R$)',
            data: receitas,
            backgroundColor: gradient,
            borderColor: 'rgba(102, 126, 234, 1)',
            borderWidth: 2,
            borderRadius: 8,
            borderSkipped: false,
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: true,
        plugins: {
            legend: { display: false },
            tooltip: {
                backgroundColor: 'rgba(0,0,0,0.85)',
                padding: 12,
                callbacks: {
                    label: ctx => 'R$ ' + ctx.parsed.y.toLocaleString('pt-BR', { minimumFractionDigits: 2 })
                }
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                ticks: {
                    callback: v => 'R$ ' + v.toLocaleString('pt-BR')
                },
                grid: { color: 'rgba(0,0,0,0.05)' }
            },
            x: { grid: { display: false } }
        }
    }
});

function mudarAno() {
    const ano = document.getElementById('anoSelect').value;
    window.location.href = '{{ path('superadmin_relatorios') }}?ano=' + ano;
}
</script>

<style>
@media print {
    .btn, nav { display: none !important; }
    .card { box-shadow: none !important; }
}
</style>
{% endblock %}
