{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<style>
    body {
        background-color: #eef5ff;
        font-family: 'Arial', sans-serif;
    }

    .pagetitle h1 {
        font-size: 2rem;
        font-weight: bold;
        color: #004080;
        text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.15);
    }

    .btn-success {
        background-color: #004080;
        border-color: #003366;
        font-weight: bold;
        border-radius: 12px;
        padding: 10px 22px;
        color: white;
    }

    .btn-success:hover {
        background-color: #003366;
    }

    .card {
        background: #f8fafd;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
    }

    .table {
        background-color: #ffffff;
        border-radius: 12px;
