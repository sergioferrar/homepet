{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<style>
    .mr-custom {
        margin-right: 8px; /* Espaçamento entre os botões */
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Serviços</h1>
    <a href="{{ path('servico_novo') }}" class="btn btn-primary mb-3">Novo Serviço</a>

    <!-- Bordered Table -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Valor</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for servico in servicos %}
            <tr>
                <td>{{ servico.nome }}</td>
                <td>{{ servico.descricao }}</td>
                <td>R$ {{ servico.valor|number_format(2, ',', '.') }}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a href="{{ path('servico_editar', {'id': servico.id}) }}" class="btn btn-warning btn-sm mr-custom">Editar</a>
                        <form method="post" action="{{ path('servico_deletar', {'id': servico.id}) }}" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">Deletar</button>
                        </form>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
